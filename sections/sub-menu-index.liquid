{{ 'sub-menu-index.css' | asset_url | stylesheet_tag }}

<div class="container-base smi-index">
  <a
    href="/pages/menu"
    class="smi-opciones"
    id="smi-menu"
  >
    <small>MENÚ</small>
  </a>
  <a
    href="/pages/"
    class="smi-opciones"
    id="smi-ofertas"
  >
    <small>OFERTAS</small>
  </a>
  <a
    href="https://microsites.spnty.co/pizzahutbolivia/login"
    target="_blank"
    class="smi-opciones"
    id="smi-hut-coins"
