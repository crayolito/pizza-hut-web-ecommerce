<div class="carrusel-encabezado">
  <div class="contenedor-carrusel">
    <!-- Botones de navegación -->
    <button class="boton-carrusel anterior" aria-label="Anterior">
      <svg width="24" height="24" viewBox="0 0 24 24">
        <path d="M15.41 7.41L14 6l-6 6 6 6 1.41-1.41L10.83 12z"/>
      </svg>
    </button>

    <button class="boton-carrusel siguiente" aria-label="Siguiente">
      <svg width="24" height="24" viewBox="0 0 24 24">
        <path d="M8.59 16.59L10 18l6-6-6-6-1.41 1.41L13.17 12z"/>
      </svg>
    </button>

    <!-- Texto de la banner + button -->
    {% if section.settings.mostrar_info_banner %}
      <div class="informacion-banner">
        <h2 class="titulo-banner">{{ section.settings.texto_titulo }}</h2>
        <a href="{{  section.settings.url_boton }}" class="boton-banner">
          <span class="texto-boton">{{ section.settings.texto_boton }}</span>
        </a>
      </div>
    {% endif %}

    <!-- Diapositivas -->
    <div class="diapositivas">
      {% for block in section.blocks %}
        <div class="diapositiva {% if forloop.first %}activa{% endif %}">
          <img src="{{ block.settings.imagen | img_url: 'master' }}" alt="{{ block.settings.titulo }}">
          <div class="contenido-diapositiva">
            <h2>{{ block.settings.titulo }}</h2>
            {% if block.settings.texto_boton != blank %}
              <a href="{{ block.settings.enlace_boton }}" class="boton">
                {{ block.settings.texto_boton }}
              </a>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>

    <!-- Indicadores -->
    <div class="indicadores">
      {% for block in section.blocks %}
        <button class="punto {% if forloop.first %}activo{% endif %}" data-diapositiva="{{ forloop.index0 }}"></button>
      {% endfor %}
    </div>
  </div>
</div>

<style>
  /* Carrusel y contenedor principal */
  .carrusel-encabezado {
    position: relative;
    width: 100%;
    height: {{ section.settings.altura_carrusel }}px;
    overflow: hidden;
  }

  .contenedor-carrusel {
    position: relative;
    width: 100%;
    height: 100%;
  }

  /* Banner información */
  .informacion-banner {
    width: 270px;
    position: absolute;
    top: 53%;
    left: 25%;
    transform: translate(-50%, -50%);
    text-align: start;
    z-index: 2;
    display: flex;
    flex-direction: column;
    gap: 96px;
  }

  /* Título */
  .titulo-banner {
    color: #FFF;
    font-size: clamp(32px, 5vw, 50px);
    font-style: normal;
    font-weight: 700;
    letter-spacing: -1px;
    text-transform: uppercase;
    text-align: left;
    font-family: var(--fuente-principal);
    transform: scaleY(1.9);
    transform-origin: top;
    line-height: 96%;
  }

  /* Botónn */
  .boton-banner {
    width: auto;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 1.3rem 1.5rem;
    background-color: #C8102E;
    color: #FFF;
    text-decoration: none;
    border-radius: 4px;
    transition: all 0.3s ease;
  }

  .texto-boton {
    font-weight: 500;
    font-family: var(--fuente-secundaria);
    font-size: 14px;
    text-transform: uppercase;
    white-space: nowrap;
  }

  /* Diapositivas */
  .diapositivas {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .diapositiva {
    position: absolute;
    width: 100%;
    height: 100%;
    opacity: 0;
    transition: opacity 0.5s ease-in-out;
  }

  .diapositiva.activa {
    opacity: 1;
  }

  .diapositiva img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Botones de navegación */
  .boton-carrusel {
    position: absolute;
    top: 60%;
    transform: translateY(-50%);
    background: transparent;
    border: 2px solid #fff;
    border-radius: 50%;
    width: 38px;
    height: 38px;
    cursor: pointer;
    opacity: 0;
    transition: opacity 0.3s, background 0.3s;
    z-index: 2;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .contenedor-carrusel:hover .boton-carrusel {
    opacity: 1;
  }

  .boton-carrusel svg {
    fill: #FFF;
    width: 24px;
    height: 24px;
  }

  .anterior {
    left: 59px;
  }

  .siguiente {
    right: 59px;
  }

  /* Indicadores */
  .indicadores {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 10px;
    z-index: 2;
  }

  .punto {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.5);
    border: none;
    cursor: pointer;
    transition: background 0.3s;
    padding: 0;
  }

  .punto:hover {
    background: rgba(255, 255, 255, 0.8);
  }

  .punto.activo {
    background: white;
    transform: scale(1.2);
  }

  /* Estados hover */
  .boton-banner:hover {
    background-color: #a30f27;
    transform: translateY(-2px);
  }

  /* Media Queriess */
  @media screen and (max-width: 1200px) {
    .informacion-banner {
      left: 30%;
      width: 270px;
      display: flex;
      gap: 96px;
      flex-direction: column;
  }
  }

  @media screen and (max-width: 768px) {
    .informacion-banner {
      left: 50%;
      width: 280px;
      gap: 30px;
    }

    .titulo-banner {
      font-size: 36px;
      transform: scaleY(1.7);
    }

    .boton-banner {
      padding: 0.7rem 1.3rem;
    }

    .texto-boton {
      font-size: 13px;
    }

    .boton-carrusel {
      width: 32px;
      height: 32px;
    }

    .anterior {
      left: 20px;
    }

    .siguiente {
      right: 20px;
    }
  }

  @media screen and (max-width: 480px) {
    .informacion-banner {
      width: 250px;
      gap: 25px;
      top: 45%;
    }

    .titulo-banner {
      font-size: 28px;
      transform: scaleY(1.6);
      line-height: 90%;
    }

    .boton-banner {
      padding: 0.6rem 1.2rem;
    }

    .texto-boton {
      font-size: 12px;
    }
  }

  /* Para pantallas muy pequeñas */
  @media screen and (max-width: 320px) {
    .informacion-banner {
      width: 220px;
      gap: 20px;
    }

    .titulo-banner {
      font-size: 24px;
    }
  }

  /* Para modo landscape */
  @media screen and (max-height: 500px) and (orientation: landscape) {
    .informacion-banner {
      top: 60%;
      gap: 20px;
    }
  }

  /* Para pantallas retina */
  @media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi) {
    .titulo-banner {
      -webkit-font-smoothing: antialiased;
      -moz-osx-font-smoothing: grayscale;
    }
  }
</style>

{% schema %}
{
  "name": "Banner Principal",
  "tag": "section",
  "class": "banner-section",
  "settings": [
    {
      "type": "text",
      "id": "texto_titulo",
      "label": "Texto del Título",
      "default": "LA MEJOR PIZZA DEL MUNDO"
    },
    {
      "type": "text",
      "id": "texto_boton",
      "label": "Texto del Botón",
      "default": "Pedir Ahora"
    },
    {
      "type": "url",
      "id": "url_boton",
      "label": "Enlace del Botón"
    },
    {
      "type": "range",
      "id": "altura_carrusel",
      "min": 400,
      "max": 1000,
      "step": 50,
      "unit": "px",
      "label": "Altura del carrusell",
      "default": 550
    },
    {
      "type": "range",
      "id": "tiempo_transicion",
      "min": 3,
      "max": 10,
      "step": 1,
      "unit": "seg",
      "label": "Tiempo entre diapositivas",
      "default": 5
    },
    {
      "type": "checkbox",
      "id": "reproduccion_automatica",
      "label": "Reproducción automática",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "mostrar_indicadores",
      "label": "Mostrar indicadores",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "mostrar_botones",
      "label": "Mostrar botones de navegación",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "mostrar_info_banner",
      "label": "Mostrar Informacion Banner",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "diapositiva",
      "name": "Diapositiva",
      "settings": [
        {
          "type": "image_picker",
          "id": "imagen",
          "label": "Imagen"
        },
        {
          "type": "text",
          "id": "titulo",
          "label": "Título"
        },
        {
          "type": "text",
          "id": "texto_boton",
          "label": "Texto del botón"
        },
        {
          "type": "url",
          "id": "enlace_boton",
          "label": "Enlace del botón"
        }
      ]
    }
  ]
}
{% endschema %}

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const diapositivas = document.querySelectorAll('.diapositiva');
    const puntos = document.querySelectorAll('.punto');
    const botonAnterior = document.querySelector('.anterior');
    const botonSiguiente = document.querySelector('.siguiente');
    let diapositivaActual = 0;

    // Configuración desde el admin
    const configuracion = {
      reproduccionAutomatica: {{ section.settings.reproduccion_automatica | json }},
      tiempoTransicion: {{ section.settings.tiempo_transicion | times: 1000 }},
      mostrarIndicadores: {{ section.settings.mostrar_indicadores | json }},
      mostrarBotones: {{ section.settings.mostrar_botones | json }}
    };

    // Mostrar/ocultar elementos según configuración
    if (!configuracion.mostrarIndicadores) {
      document.querySelector('.indicadores').style.display = 'none';
    }

    if (!configuracion.mostrarBotones) {
      botonAnterior.style.display = 'none';
      botonSiguiente.style.display = 'none';
    }

    function mostrarDiapositiva(n) {
      diapositivas[diapositivaActual].classList.remove('activa');
      puntos[diapositivaActual].classList.remove('activo');
      diapositivaActual = (n + diapositivas.length) % diapositivas.length;
      diapositivas[diapositivaActual].classList.add('activa');
      puntos[diapositivaActual].classList.add('activo');
    }

    botonAnterior.addEventListener('click', () => mostrarDiapositiva(diapositivaActual - 1));
    botonSiguiente.addEventListener('click', () => mostrarDiapositiva(diapositivaActual + 1));

    puntos.forEach((punto, index) => {
      punto.addEventListener('click', () => mostrarDiapositiva(index));
    });

    // Reproducción automática configurable
    if (configuracion.reproduccionAutomatica) {
      setInterval(() => mostrarDiapositiva(diapositivaActual + 1), configuracion.tiempoTransicion);
    }
  });
</script>
