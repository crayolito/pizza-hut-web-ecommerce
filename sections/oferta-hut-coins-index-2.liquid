<style>
  .ohci2-contenedor-base {
    width: 100%;
    padding: var(--espaciado-xl) var(--espaciado-xxl);
  }

  .ohci2-base-interno {
    width: 100%;

    display: flex;
    flex-direction: column;
  }

  .ohci2-imagen {
    width: 100%;
    height: 30rem;
  }

  .ohci2-imagen img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-top-left-radius: var(--espaciado-l);
    border-top-right-radius: var(--espaciado-l);
  }

  .ohci2-informacion {
    width: 100%;
    height: 30rem;
    background-color: var(--colorp-tertiary);
    display: flex;
    flex-direction: column;
    align-items: start;
    justify-content: center;
    padding: var(--espaciado-big) var(--espaciado-xxxl);
    border-bottom-left-radius: var(--espaciado-l);
    border-bottom-right-radius: var(--espaciado-l);
  }

  .ohci2-informacion img {
    width: 13.0625rem;
    height: 5.24944rem;
    aspect-ratio: 209/83.99;
    object-fit: cover;
    {% comment %} border-radius: var(--border-radius-1); {% endcomment %}
    margin-bottom: 0.75rem;
  }

  .ohci2-informacion small {
    color: var(--colorp-secondary);
    font-family: var(--fuente-primary);
    font-size: 3.3125rem;
    font-style: normal;
    font-weight: 400;
    line-height: 3.4375rem;
    letter-spacing: -0.06625rem;
    text-transform: uppercase;
  }

  .ohci2-boton {
    margin-top: 1rem;
    width: 100%;
    height: var(--espaciado-xxxl);
    background-color: var(--colorp-primary);
    border-radius: var(--border-radius-1);
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .ohci2-boton p {
    color: var(--colorp-secondary);
    font-weight: 600;
  }

  @media screen and (min-width: 768px) {
    .ohci2-boton {
      width: 18.75rem;
    }

    .ohci2-base-interno {
      flex-direction: row;
    }

    .ohci2-imagen img {
      border-top-left-radius: var(--espaciado-l);
      border-bottom-left-radius: var(--espaciado-l);
      border-top-right-radius: 0;
      border-bottom-right-radius: 0;
    }

    .ohci2-informacion {
      border-bottom-left-radius: 0;
      border-bottom-right-radius: 0;
      border-top-right-radius: var(--espaciado-l);
      border-bottom-right-radius: var(--espaciado-l);
    }
  }

  @media screen and (min-width: 1024px) {
  }
</style>

