{% style %}
  :root {
    --fuente-principal: 'League Gothic', sans-serif;
    --fuente-secundaria: 'Montserrat', sans-serif;
    --color-primario: #231f20;
    --color-borde: #dedede;
    --color-borde-oscuro: #969696;
  }

  h4 {
    font-family: var(--fuente-principal);
    font-size: 1.5rem;
    font-style: normal;
    font-weight: 400;
    line-height: 1.6875rem;
    letter-spacing: -0.03rem;
    text-transform: uppercase;
  }

  h3 {
    font-family: var(--fuente-principal);
    font-size: 2rem;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
    letter-spacing: -0.04rem;
    text-transform: uppercase;
  }

  h2 {
    font-family: var(--fuente-principal);
    font-size: 2.25rem;
    font-style: normal;
    line-height: normal;
    text-transform: uppercase;
  }

  p {
    font-family: var(--fuente-secundaria);
    font-size: 1rem;
    font-style: normal;
    font-weight: 400;
    line-height: 1.6875rem;
  }

  a {
    text-decoration: none;
    color: inherit;
    cursor: pointer;
  }

  input {
    font-family: var(--fuente-secundaria);
    font-size: 1rem;
    line-height: 1.6875rem;
    margin: 0;
    padding: 0;
    border: none;
    outline: none;
    background: transparent;
    width: 100%;
  }

  /* Estilos solo para móvil */
  @media screen and (max-width: 767px) {
    /* Aquí iría el CSS para la versión móvil cuando la desarrolles */
    .encabezado {
      padding: 0 20px !important;
    }

    /* Se podrían agregar más reglas específicas para móvil */
  }
{% endstyle %}

<sticky-header>
  <header
    style="
      width: 100%;
      height: 90px;
      padding: 0 53px;
      background-color: #FFF;
      display: flex;
      justify-content: space-between;
      align-items: center;
    "
    class="encabezado"
  >
    <div
      style="
        height: 37px;
        width: 136px;
      "
      class="contenedor-logo"
    >
      <img
        style="
          height: 100%;
          width: 100%;
          object-fit: contain;
        "
        src="{{ 'logo-pizza-hut.png' | asset_url }}"
        alt="Logo Pizza Hut"
        class="logo"
      >
    </div>

    <nav
      style="
        display: flex;
        align-items: center;
        gap: 29px;
        width: auto;
      "
      class="menu-navegacion"
    >
      <div class="menu-item">
        <a href="/menu">
          <h4>Menú</h4>
        </a>
      </div>
      <div class="menu-item menu-hutcoins">
        <a
          style="
            display: flex;
            align-items: center;
            justify-content: center;
          "
          href="/promociones"
        >
          <h4>Hut Coins</h4>
          {% render 'icon-flecha-hutcoins' %}
        </a>
      </div>
      <div class="menu-item">
        <a href="/restaurantes">
          <h4>Sobre Nosotros</h4>
        </a>
      </div>
    </nav>

    <div
      style="
        display: flex;
        align-items: center;
        gap: 27px;
      "
      class="contenedor-opciones"
    >
      <div
        style="
          width: 177px;
          height: 43px;
          gap: 8px;
          display: flex;
          align-items: center;
          border-radius: 4px;
          border: 1.5px solid #6E6E6E;
          background-color: #FFF;
          padding: 14px;
        "
        class="contenedor-buscador"
      >
        {% render 'icon-search', class: 'icono-buscar' %}
        <input type="search" class="campo-busqueda" placeholder="Buscar...">
      </div>

      <div
        style="display:flex; align-items: center; justify-content: center; height: 36px;padding: 0px 27px; border-left: 1.5px solid #DEDEDE; border-right: 1.5px solid #DEDEDE;"
        class="contenedor-carrito"
      >
        {% render 'icon-carrito' %}
      </div>

      <div
        style="
          display: flex;
          height: 36px;
          padding: 0px 27px 0px 0px;
          gap: 0px 8px;
          border-right: 1.5px solid #DEDEDE;
          flex-direction: column;
          align-items: start;
          justify-content: center;
        "
        class="modo-entrega"
      >
        <p
          style="
            text-transform: uppercase;
            font-weight: 600;
          "
          class="texto-entrega-titulo"
        >
          Selecciona tu
        </p>
        <div
          style="
            display: flex;
            align-items: center;
            gap: 4px;
          "
          class="contenedor-metodo"
        >
          <h4 class="texto-metodo">Método de entrega</h4>
          {% render 'icon-domicilio', class: 'icono-domicilio' %}
        </div>
      </div>

      <button
        style="
          border-radius: 4px;
          background: #C8102E;
          gap: 8px;
          padding: 8px 16px;
          display: flex;
          align-items: center;
          justify-content: center;
          height: 36px;
        "
        class="boton-login"
      >
        <h4
          style="color: #FFF;"
          class="texto-login"
        >
          Iniciar sesión
        </h4>
        {% render 'icon-search', class: 'icono-login' %}
      </button>
    </div>
  </header>
</sticky-header>

<script>
  class HeaderPrincipal extends HTMLElement {}
  customElements.define('sticky-header', HeaderPrincipal);
</script>

