{% style %}
  :root {
    --fuente-principal: 'League Gothic', sans-serif;
    --fuente-secundaria: 'Montserrat', sans-serif;
    --color-primario: #231f20;
    --color-borde: #dedede;
    --color-borde-oscuro: #969696;
  }

  .encabezado {
    width: 100%;
    height: 5.5rem;
    padding: 2vh 4vw;
    background-color: #fff;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  /* Móvil (pequeño) */
  @media screen and (max-width: 479px) {
    .encabezado {
      height: 4rem; /* Más pequeño en móviles pequeños */
      padding: 1vh 3vw; /* Menos padding */
      flex-direction: column; /* Apilar elementos en pantallas muy pequeñas si es necesario */
      justify-content: center;
    }
  }

  /* Móvil (mediano a grande) */
  @media screen and (min-width: 480px) and (max-width: 767px) {
    .encabezado {
      height: 4.5rem; /* Ligeramente más grande que en móviles pequeños */
      padding: 1.5vh 3.5vw;
    }
  }

  /* Tablets */
  @media screen and (min-width: 768px) and (max-width: 991px) {
    .encabezado {
      height: 5rem; /* Tamaño intermedio para tablets */
      padding: 1.8vh 3.8vw;
    }
  }

  /* Laptop/Desktop (pequeño) */
  @media screen and (min-width: 992px) and (max-width: 1199px) {
    .encabezado {
      height: 5.5rem; /* Tamaño original para laptops/desktops pequeños */
      padding: 2vh 4vw;
    }
  }

  /* Desktop (grande) */
  @media screen and (min-width: 1200px) {
    .encabezado {
      height: 6rem; /* Ligeramente más grande para pantallas grandes */
      padding: 2.5vh 4.5vw;
      max-width: 1800px; /* Limitar el ancho máximo para evitar que se estire demasiado */
      margin: 0 auto; /* Centrar en pantallas muy grandes */
    }
  }

  /* Estilos de tipografía exactamente como los tenías */
{% endstyle %}

<sticky-header>
  <header
    class="encabezado"
  >
    <div
      style="
        height: 37px;
        width: 136px;
      "
      class="contenedor-logo"
    >
      <img
        style="
          height: 100%;
          width: 100%;
          object-fit: contain;
        "
        src="{{ 'logo-pizza-hut.png' | asset_url }}"
        alt="Logo Pizza Hut"
        class="logo"
      >
    </div>

    <nav
      style="
        display: flex;
        align-items: center;
        gap: 2rem;
        width: auto;
        margin: 0rem 4rem;
      "
      class="menu-navegacion"
    >
      <div class="menu-item">
        <a href="/menu">
          <h4>Menú</h4>
        </a>
      </div>
      <div class="menu-item menu-hutcoins">
        <a
          style="
            display: flex;
            align-items: center;
            justify-content: center;
          "
          href="/promociones"
        >
          <h4>Hut Coins</h4>
          {% render 'icon-flecha-hutcoins' %}
        </a>
      </div>
      <div class="menu-item">
        <a href="/restaurantes">
          <h4>Sobre Nosotros</h4>
        </a>
      </div>
    </nav>

    <div
      style="
        display: flex;
        align-items: center;
        gap: 27px;
      "
      class="contenedor-opciones"
    >
      <div
        style="
          width: 177px;
          height: 43px;
          gap: 8px;
          display: flex;
          align-items: center;
          border-radius: 4px;
          border: 1.5px solid #6E6E6E;
          background-color: #FFF;
          padding: 14px;
        "
        class="contenedor-buscador"
      >
        {% render 'icon-search', class: 'icono-buscar' %}
        <input type="search" class="campo-busqueda" placeholder="Buscar...">
      </div>

      <div
        style="display:flex; align-items: center; justify-content: center; height: 36px;padding: 0px 27px; border-left: 1.5px solid #DEDEDE; border-right: 1.5px solid #DEDEDE;"
        class="contenedor-carrito"
      >
        {% render 'icon-carrito' %}
      </div>

      <div
        style="
          display: flex;
          height: 36px;
          padding: 0px 27px 0px 0px;
          gap: 0px 8px;
          border-right: 1.5px solid #DEDEDE;
          flex-direction: column;
          align-items: start;
          justify-content: center;
        "
        class="modo-entrega"
      >
        <p
          style="
            text-transform: uppercase;
            font-weight: 600;
          "
          class="texto-entrega-titulo"
        >
          Selecciona tu
        </p>
        <div
          style="
            display: flex;
            align-items: center;
            gap: 4px;
          "
          class="contenedor-metodo"
        >
          <h4 class="texto-metodo">Método de entrega</h4>
          {% render 'icon-domicilio', class: 'icono-domicilio' %}
        </div>
      </div>

      <button
        style="
          border-radius: 4px;
          background: #C8102E;
          gap: 8px;
          padding: 8px 16px;
          display: flex;
          align-items: center;
          justify-content: center;
          height: 36px;
        "
        class="boton-login"
      >
        <h4
          style="color: #FFF;"
          class="texto-login"
        >
          Iniciar sesión
        </h4>
        {% render 'icon-search', class: 'icono-login' %}
      </button>
    </div>
  </header>
</sticky-header>

<script>
  class HeaderPrincipal extends HTMLElement {}
  customElements.define('sticky-header', HeaderPrincipal);
</script>
