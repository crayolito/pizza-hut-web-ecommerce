<!-- Estilos traer de assets/header.css as -->
{{ 'header.css' | asset_url | stylesheet_tag }}

<sticky-header>
  <header class="h-header-principal">
    <div class="h-metodo-entrega-no-seleccionado">
      <div class="h-logo-principal">
        <img src="{{ 'logo-sauce-only-1.png' | asset_url }}" alt="Logo Sauce Only" width="100" height="100">
      </div>
      <div class="h-sector-seleccion-metodo-entrega">
        <p>Selecciona tu</p>
        <div class="h-texto-metodo-entrega">
          <h4>Método de entrega</h4>
          {% render 'icon-pizza-metodo-entrega' %}
        </div>
      </div>
      <button class="h-boton-menu">
        {% render 'icon-hamburguesa' %}
      </button>
    </div>
    <div class="h-metodo-entrega-seleccionado">
      <p>Selecciona tu</p>
      <div class="h-texto-metodo-entrega">
        <h4>Método de entrega</h4>
        {% render 'icon-pizza-metodo-entrega' %}
      </div>
      <button class="h-boton-buscar">
        {% render 'icon-search' %}
        <h3>Buscar</h3>
      </button>
      <button class="h-boton-cambio-metodo-entrega">
        <div class="h-icono-metodo-entrega">
          {% render 'icon-pizza-metodo-entrega' %}
        </div>
        <h3>Local</h3>
        <div class="h-icono-solocitud-metodo-entrega">
          {% render 'icon-flecha-abajo' %}
        </div>
      </button>
      <button class="h-boton-carrito">
        {% render 'icon-carrito' %}
      </button>
      <button class="h-boton-menu">
        {% render 'icon-menu-hamburguesa' %}
      </button>
    </div>
  </header>
</sticky-header>

<script>
  class HeaderPrincipal extends HTMLElement {}
  customElements.define('sticky-header', HeaderPrincipal);
</script>
