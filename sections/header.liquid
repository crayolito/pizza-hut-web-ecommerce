<sticky-header>
  <header
    style="
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      z-index: 1000;
      padding: 0;
      font-family: var(--fuente-principal);
    "
  >
    <div
      style="
        display: flex;
        height: 78px;
        justify-content: space-between;
        align-items: center;
        border-radius: 8px;
        border: 1px solid #DEDEDE;
        background: #FFF;
        margin: 30px 59px 0 59px;
        padding: 10px 30px;
        font-family: var(--fuente-principal);
      "
    >
      <!-- LOGO DE PIZZA HUT -->
      <div class="logo-container">
        <a href="/">
          <img
            src="{{ 'logo-pizza-hut.png' | asset_url }}"
            alt="Pizza Hut Logo"
            style="
              height: 40px;
              width: 180px;
              object-fit: contain;
            "
          >
        </a>
      </div>

      <!-- OPCIONES -->
      <nav class="menu-options" style="display: flex; align-items: center; gap: 40px;">
        <a
          href="/menu"
          style="
            text-decoration: none;
            color: #231F20;
            font-size: 18px;
            font-weight: 600;
            line-height: normal;
            transition: color 0.3s ease;
            font-family: var(--fuente-principal);
          "
          onmouseover="this.style.color='#E31837'"
          onmouseout="this.style.color='#231F20'"
        >
          Men√∫
        </a>

        <a
          href="/promociones"
          style="
            text-decoration: none;
            color: #231F20;
            font-size: 18px;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 8px;
            line-height: normal;
            transition: color 0.3s ease;
            font-family: var(--fuente-principal);
          "
          onmouseover="this.style.color='#E31837'"
          onmouseout="this.style.color='#231F20'"
        >
          Hut Coins
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M12 2C6.48 2 2 6.48 2 12C2 17.52 6.48 22 12 22C17.52 22 22 17.52 22 12C22 6.48 17.52 2 12 2ZM12 20C7.59 20 4 16.41 4 12C4 7.59 7.59 4 12 4C16.41 4 20 7.59 20 12C20 16.41 16.41 20 12 20ZM12.31 11.14C13.54 10.73 14.5 9.59 14.5 8.5C14.5 7.13 13.39 6 12 6C10.61 6 9.5 7.13 9.5 8.5H11.5C11.5 8.22 11.73 8 12 8C12.27 8 12.5 8.22 12.5 8.5C12.5 8.78 12.27 9 12 9C11.45 9 11 9.45 11 10V11.5H13V10.62C14.04 10.24 14.82 9.43 15.01 8.36C15.01 8.25 15 8.12 15 8C15 6.34 13.66 5 12 5C10.34 5 9 6.34 9 8C9 9.66 10.34 11 12 11C12.1 11 12.21 10.99 12.31 10.98V11.14ZM13 15H11V13H13V15Z" fill="currentColor"/>
          </svg>
        </a>

        <a
          href="/restaurantes"
          style="
            text-decoration: none;
            color: #231F20;
            font-size: 18px;
            font-weight: 600;
            line-height: normal;
            transition: color 0.3s ease;
            font-family: var(--fuente-principal);
          "
          onmouseover="this.style.color='#E31837'"
          onmouseout="this.style.color='#231F20'"
        >
          Sobre Nosotros
        </a>
      </nav>

      <!-- BUSCADOR -->
      <div
        class="search-container"
        style="
          position: relative;
          display: flex;
          height: 48px;
          padding: 20px;
          align-items: center;
          gap: 4px;
          align-self: stretch;
          min-width: 250px;
        "
      >
        <svg
          style="position: absolute; left: 30px; top: 50%; transform: translateY(-50%);"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            d="M15.5 14H14.71L14.43 13.73C15.41 12.59 16 11.11 16 9.5C16 5.91 13.09 3 9.5 3C5.91 3 3 5.91 3 9.5C3 13.09 5.91 16 9.5 16C11.11 16 12.59 15.41 13.73 14.43L14 14.71V15.5L19 20.49L20.49 19L15.5 14ZM9.5 14C7.01 14 5 11.99 5 9.5C5 7.01 7.01 5 9.5 5C11.99 5 14 7.01 14 9.5C14 11.99 11.99 14 9.5 14Z"
            fill="#6E6E6E"
          />
        </svg>
        <input
          type="search"
          placeholder="Buscar..."
          style="
            width: 100%;
            padding: 12px 12px 12px 45px;
            border-radius: 6px;
            border: 1px solid #6E6E6E;
            font-size: 16px;
            font-family: var(--fuente-principal);
            outline: none;
            font-weight: 500;
            color: #231F20;
            background: #FFF;
            transition: border-color 0.3s ease;
          "
          onfocus="this.style.borderColor='#E31837'"
          onblur="this.style.borderColor='#6E6E6E'"
        >
      </div>

      <!-- CARRITO -->
      <div
        class="cart-container"
        style="
          height: 65%;
          border-right: 1.5px solid #969696;
          border-left: 1.5px solid #969696;
          padding: 0px 32px;
          display: flex;
          align-items: center;
          cursor: pointer;
          transition: transform 0.3s ease;
        "
        onmouseover="this.style.transform='scale(1.05)'"
        onmouseout="this.style.transform='scale(1)'"
      >
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M15.55 13C16.3 13 16.96 12.59 17.3 11.97L20.88 5.48C21.25 4.82 20.77 4 20.01 4H5.21L4.27 2H1V4H3L6.6 11.59L5.25 14.03C4.52 15.37 5.48 17 7 17H19V15H7L8.1 13H15.55ZM6.16 6H18.31L15.55 11H8.53L6.16 6ZM7 18C5.9 18 5.01 18.9 5.01 20C5.01 21.1 5.9 22 7 22C8.1 22 9 21.1 9 20C9 18.9 8.1 18 7 18ZM17 18C15.9 18 15.01 18.9 15.01 20C15.01 21.1 15.9 22 17 22C18.1 22 19 21.1 19 20C19 18.9 18.1 18 17 18Z" fill="#231F20"/>
        </svg>
      </div>

      <!-- MODALIDAD DE ENTREGA -->
      <div
        class="delivery-mode"
        style="
          margin: 0 25px;
          display: flex;
          flex-direction: row;
          align-items: center;
          gap: 8px;
          cursor: pointer;
          transition: transform 0.3s ease;
        "
        onmouseover="this.style.transform='scale(1.05)'"
        onmouseout="this.style.transform='scale(1)'"
      >
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M19.15 8H17.46L16.77 5.71C16.41 4.65 15.44 4 14.32 4H7C5.9 4 5 4.9 5 6V15C5 15.55 5.45 16 6 16C6.55 16 7 15.55 7 15V6H14.31C14.65 6 14.95 6.23 15.06 6.55L15.83 9H11C9.34 9 8 10.34 8 12V16.62C8 17.95 9.04 19 10.38 19C11.12 19 11.79 18.63 12.16 18L13.77 15.3C14.01 14.91 14.31 14.59 14.62 14.32L19.16 15.79C19.68 15.95 20.22 15.73 20.47 15.27C21.09 14.12 21.25 12.74 20.91 11.46C20.58 10.19 19.82 9.05 18.7 8.32C18.87 8.12 19.03 8 19.15 8ZM13 12C13 13.1 12.1 14 11 14C9.9 14 9 13.1 9 12C9 10.9 9.9 10 11 10C12.1 10 13 10.9 13 12Z" fill="#231F20"/>
        </svg>
        <h4
          style="
            color: #231F20;
            font-family: var(--fuente-principal);
            font-size: 22px;
            font-style: normal;
            font-weight: 600;
            line-height: 27px;
            letter-spacing: -0.48px;
            text-transform: uppercase;
            margin: 0;
          "
        >
          DOMICILIO
        </h4>
      </div>

      <!-- ESTADO USUARIO -->
      <div
        class="user-status"
        style="
          margin-right: 20px;
          display: flex;
          align-items: center;
          gap: 4px;
          cursor: pointer;
          transition: transform 0.3s ease;
        "
        onmouseover="this.style.transform='scale(1.05)'"
        onmouseout="this.style.transform='scale(1)'"
      >
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M12 2C6.48 2 2 6.48 2 12C2 17.52 6.48 22 12 22C17.52 22 22 17.52 22 12C22 6.48 17.52 2 12 2ZM12 5C13.66 5 15 6.34 15 8C15 9.66 13.66 11 12 11C10.34 11 9 9.66 9 8C9 6.34 10.34 5 12 5ZM12 19.2C9.5 19.2 7.29 17.92 6 15.98C6.03 13.99 10 12.9 12 12.9C13.99 12.9 17.97 13.99 18 15.98C16.71 17.92 14.5 19.2 12 19.2Z" fill="#231F20"/>
        </svg>
      </div>
    </div>
  </header>
</sticky-header>

<script>
  class HeaderPrincipal extends HTMLElement {}

  customElements.define('sticky-header', HeaderPrincipal);
</script>
