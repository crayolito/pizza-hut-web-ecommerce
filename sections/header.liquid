{% style %}
  :root {
    --fuente-principal: 'League Gothic', sans-serif;
    --fuente-secundaria: 'Montserrat', sans-serif;
    --color-primario: #231f20;
    --color-borde: #dedede;
    --color-borde-oscuro: #969696;
    --color-rojo: #C8102E;
  }

  /* Reset básico para asegurar comportamiento consistente */
  *, *::before, *::after {
    box-sizing: border-box;
  }

  /* Tipografía que mantiene proporciones consistentes */
  h4 {
    font-family: var(--fuente-principal);
    font-size: 1.5rem;
    font-style: normal;
    font-weight: 400;
    line-height: 1.6875rem;
    letter-spacing: -0.03rem;
    text-transform: uppercase;
    margin: 0;
  }

  h3 {
    font-family: var(--fuente-principal);
    font-size: 2rem;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
    letter-spacing: -0.04rem;
    text-transform: uppercase;
    margin: 0;
  }

  h2 {
    font-family: var(--fuente-principal);
    font-size: 2.25rem;
    font-style: normal;
    line-height: normal;
    text-transform: uppercase;
    margin: 0;
  }

  p {
    font-family: var(--fuente-secundaria);
    font-size: 1rem;
    font-style: normal;
    font-weight: 400;
    line-height: 1.6875rem;
    margin: 0;
  }

  a {
    text-decoration: none;
    color: inherit;
    cursor: pointer;
  }

  input {
    font-family: var(--fuente-secundaria);
    font-size: 1rem;
    line-height: 1.6875rem;
    margin: 0;
    padding: 0;
    border: none;
    outline: none;
    background: transparent;
    width: 100%;
  }

  button {
    cursor: pointer;
    border: none;
  }

  /* Contenedor principal con flexbox */
  .encabezado {
    width: 100%;
    height: 90px;
    padding: 0 53px;
    background-color: #FFF;
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: relative;
  }

  /* Logo con tamaño fijo pero manteniendo proporciones */
  .contenedor-logo {
    height: 37px;
    width: 136px;
    flex-shrink: 0; /* Evita que se comprima */
  }

  .logo {
    height: 100%;
    width: 100%;
    object-fit: contain;
  }

  /* Navegación central con espaciado consistente */
  .menu-navegacion {
    display: flex;
    align-items: center;
    gap: 29px;
    width: auto;
    flex-grow: 0; /* No crece, mantiene su tamaño */
    flex-shrink: 1; /* Puede reducirse si es necesario */
    margin: 0 auto; /* Centrado automático */
    justify-content: center;
  }

  .menu-item {
    white-space: nowrap; /* Previene que los títulos se rompan */
  }

  .menu-hutcoins a {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 4px;
  }

  /* Opciones de la derecha con comportamiento responsivo */
  .contenedor-opciones {
    display: flex;
    align-items: center;
    gap: 27px;
    flex-shrink: 0; /* Evita que se comprima */
  }

  .contenedor-buscador {
    width: 177px;
    height: 43px;
    gap: 8px;
    display: flex;
    align-items: center;
    border-radius: 4px;
    border: 1.5px solid #6E6E6E;
    background-color: #FFF;
    padding: 14px;
    flex-shrink: 1; /* Puede reducirse si es necesario */
  }

  .icono-buscar {
    flex-shrink: 0; /* El icono mantiene su tamaño */
  }

  .campo-busqueda {
    flex-grow: 1; /* El campo de texto puede crecer */
  }

  .contenedor-carrito {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 36px;
    padding: 0px 27px;
    border-left: 1.5px solid #DEDEDE;
    border-right: 1.5px solid #DEDEDE;
    flex-shrink: 0; /* Mantiene su tamaño */
  }

  .modo-entrega {
    display: flex;
    height: 36px;
    padding: 0px 27px 0px 0px;
    gap: 0px 8px;
    border-right: 1.5px solid #DEDEDE;
    flex-direction: column;
    align-items: flex-start;
    justify-content: center;
    flex-shrink: 0; /* Mantiene su tamaño */
  }

  .texto-entrega-titulo {
    text-transform: uppercase;
    font-weight: 600;
  }

  .contenedor-metodo {
    display: flex;
    align-items: center;
    gap: 4px;
  }

  .texto-metodo {
    white-space: nowrap; /* Evita que el texto se rompa */
  }

  .boton-login {
    border-radius: 4px;
    background: #C8102E;
    gap: 8px;
    padding: 8px 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 36px;
    flex-shrink: 0; /* Mantiene su tamaño */
  }

  .texto-login {
    color: #FFF;
    white-space: nowrap; /* Evita que el texto se rompa */
  }

  /* Media queries específicos para rangos de pantalla */
  @media screen and (max-width: 1366px) and (min-width: 1024px) {
    .encabezado {
      padding: 0 3%; /* Porcentual para mejor adaptación */
    }
    
    .menu-navegacion {
      gap: 20px; /* Ligeramente reducido */
    }
    
    .contenedor-opciones {
      gap: 15px; /* Ligeramente reducido */
    }
    
    .contenedor-buscador {
      width: 150px; /* Ligeramente reducido */
    }
    
    .contenedor-carrito, .modo-entrega {
      padding: 0 20px 0 0; /* Ligeramente reducido */
    }
  }

  @media screen and (max-width: 1023px) and (min-width: 768px) {
    .encabezado {
      padding: 0 2%; /* Más reducido para tablets */
    }
    
    .menu-navegacion {
      gap: 15px;
    }
    
    .contenedor-opciones {
      gap: 10px;
    }
    
    .contenedor-buscador {
      width: 120px;
    }
    
    .contenedor-carrito {
      padding: 0 15px;
    }
    
    .modo-entrega {
      padding: 0 15px 0 0;
    }
    
    /* Ajuste sutil de tamaños en tablets */
    h4 {
      font-size: 1.3rem;
    }
  }

  /* Media query específico para dispositivos móviles (no implementado) */
  @media screen and (max-width: 767px) {
    /* El diseño móvil iría aquí - se haría completamente diferente */
  }
{% endstyle %}

