{% style %}
  :root {
    --fuente-principal: 'League Gothic', sans-serif;
    --fuente-secundaria: 'Montserrat', sans-serif;
    --color-primario: #231f20;
    --color-borde: #dedede;
    --color-borde-oscuro: #969696;
  }

  /* Estilos base con medidas responsivas */
  h4 {
    font-family: var(--fuente-principal);
    font-size: calc(1.2rem + 0.3vw); /* Texto responsivo */
    font-style: normal;
    font-weight: 400;
    line-height: 1.6875rem;
    letter-spacing: -0.03rem;
    text-transform: uppercase;
    margin: 0;
  }

  h3 {
    font-family: var(--fuente-principal);
    font-size: calc(1.5rem + 0.5vw); /* Texto responsivo */
    font-style: normal;
    font-weight: 400;
    line-height: normal;
    letter-spacing: -0.04rem;
    text-transform: uppercase;
    margin: 0;
  }

  h2 {
    font-family: var(--fuente-principal);
    font-size: calc(1.8rem + 0.5vw); /* Texto responsivo */
    font-style: normal;
    line-height: normal;
    text-transform: uppercase;
    margin: 0;
  }

  p {
    font-family: var(--fuente-secundaria);
    font-size: calc(0.9rem + 0.1vw); /* Texto responsivo */
    font-style: normal;
    font-weight: 400;
    line-height: 1.6875rem;
    margin: 0;
  }

  a {
    text-decoration: none;
    color: inherit;
    cursor: pointer;
  }

  input {
    font-family: var(--fuente-secundaria);
    font-size: 1rem;
    line-height: 1.6875rem;
    margin: 0;
    padding: 0;
    border: none;
    outline: none;
    background: transparent;
    width: 100%;
  }

  /* Estilos base responsivos para la estructura */
  .encabezado {
    width: 100%;
    height: 90px;
    padding: 0 min(53px, 5%); /* Responsivo con mínimo */
    background-color: #fff;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .contenedor-logo {
    height: 37px;
    width: 136px;
    flex-shrink: 0;
  }

  .logo {
    height: 100%;
    width: 100%;
    object-fit: contain;
  }

  .menu-navegacion {
    display: flex;
    align-items: center;
    gap: min(29px, 3vw); /* Responsivo con mínimo */
    width: auto;
  }

  .menu-hutcoins a {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .contenedor-opciones {
    display: flex;
    align-items: center;
    gap: min(27px, 2.5vw); /* Responsivo con mínimo */
  }

  .contenedor-buscador {
    width: min(177px, 15vw); /* Responsivo con mínimo */
    height: 43px;
    gap: 8px;
    display: flex;
    align-items: center;
    border-radius: 4px;
    border: 1.5px solid #6e6e6e;
    background-color: #fff;
    padding: 14px;
  }

  .contenedor-carrito {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 36px;
    padding: 0 min(27px, 2vw); /* Responsivo con mínimo */
    border-left: 1.5px solid var(--color-borde);
    border-right: 1.5px solid var(--color-borde);
  }

  .modo-entrega {
    display: flex;
    height: 36px;
    padding: 0 min(27px, 2vw) 0 0; /* Responsivo con mínimo */
    gap: 0 8px;
    border-right: 1.5px solid var(--color-borde);
    flex-direction: column;
    align-items: flex-start;
    justify-content: center;
  }

  .texto-entrega-titulo {
    text-transform: uppercase;
    font-weight: 600;
  }

  .contenedor-metodo {
    display: flex;
    align-items: center;
    gap: 4px;
    white-space: nowrap; /* Evita que el texto se rompa */
  }

  .boton-login {
    border-radius: 4px;
    background: #c8102e;
    gap: 8px;
    padding: 8px 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 36px;
    border: none;
    cursor: pointer;
  }

  .texto-login {
    color: #fff;
    white-space: nowrap; /* Evita que el texto se rompa */
  }

  /* Media query específico para dispositivos móviles (no implementado) */
  @media screen and (max-width: 767px) {
    /* El diseño móvil iría aquí - se haría completamente diferente */
  }
{% endstyle %}

<sticky-header>
  <header class="encabezado">
    <div class="contenedor-logo">
      <img
        class="logo"
        src="{{ 'logo-pizza-hut.png' | asset_url }}"
        alt="Logo Pizza Hut"
      >
    </div>

    <nav class="menu-navegacion">
      <div class="menu-item">
        <a href="/menu">
          <h4>Menú</h4>
        </a>
      </div>
      <div class="menu-item menu-hutcoins">
        <a href="/promociones">
          <h4>Hut Coins</h4>
          {% render 'icon-flecha-hutcoins' %}
        </a>
      </div>
      <div class="menu-item">
        <a href="/restaurantes">
          <h4>Sobre Nosotros</h4>
        </a>
      </div>
    </nav>

    <div class="contenedor-opciones">
      <div class="contenedor-buscador">
        {% render 'icon-search', class: 'icono-buscar' %}
        <input type="search" class="campo-busqueda" placeholder="Buscar...">
      </div>

      <div class="contenedor-carrito">
        {% render 'icon-carrito' %}
      </div>

      <div class="modo-entrega">
        <p class="texto-entrega-titulo">Selecciona tu</p>
        <div class="contenedor-metodo">
          <h4 class="texto-metodo">Método de entrega</h4>
          {% render 'icon-domicilio', class: 'icono-domicilio' %}
        </div>
      </div>

      <button class="boton-login">
        <h4 class="texto-login">Iniciar sesión</h4>
        {% render 'icon-search', class: 'icono-login' %}
      </button>
    </div>
  </header>
</sticky-header>

<script>
  class HeaderPrincipal extends HTMLElement {}
  customElements.define('sticky-header', HeaderPrincipal);
</script>
