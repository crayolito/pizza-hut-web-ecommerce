{% style %}
  :root {
    --fuente-principal: 'League Gothic', sans-serif;
    --fuente-secundaria: 'Montserrat', sans-serif;
    --color-primario: #231f20;
    --color-borde: #dedede;
    --color-borde-oscuro: #969696;
    --color-rojo: #c8102e;
    --altura-header: 90px; /* Mantenemos px para consistencia con el personalizador */
    --espacio-items: 29px;
  }

  /* Reseteo básico para consistencia */
  * {
    box-sizing: border-box;
  }

  /* Estilos de tipografía consistentes */
  h4 {
    font-family: var(--fuente-principal);
    font-size: 24px; /* Mantenemos tamaño fijo para evitar problemas en personalizador */
    font-style: normal;
    font-weight: 400;
    line-height: 27px;
    letter-spacing: -0.03em;
    text-transform: uppercase;
    margin: 0;
  }

  h3 {
    font-family: var(--fuente-principal);
    font-size: 32px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
    letter-spacing: -0.04em;
    text-transform: uppercase;
    margin: 0;
  }

  h2 {
    font-family: var(--fuente-principal);
    font-size: 36px;
    font-style: normal;
    line-height: normal;
    text-transform: uppercase;
    margin: 0;
  }

  p {
    font-family: var(--fuente-secundaria);
    font-size: 16px;
    font-style: normal;
    font-weight: 400;
    line-height: 27px;
    margin: 0;
  }

  a {
    text-decoration: none;
    color: inherit;
    cursor: pointer;
  }

  input {
    font-family: var(--fuente-secundaria);
    font-size: 16px;
    line-height: 27px;
    margin: 0;
    padding: 0;
    border: none;
    outline: none;
    background: transparent;
    width: 100%;
  }

  /* Estilos del encabezado para garantizar estabilidad */
  header.encabezado {
    width: 100%;
    height: var(--altura-header);
    padding: 0 53px;
    background-color: #fff;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: nowrap; /* Evita que los elementos se envuelvan en filas nuevas */
    position: relative; /* Para posicionamiento absoluto si es necesario */
  }

  .contenedor-logo {
    height: 37px;
    width: 136px;
    min-width: 100px; /* Ancho mínimo para evitar que se comprima demasiado */
    flex-shrink: 1; /* Permitir algo de compresión si es necesario */
    margin-right: 20px;
  }

  .logo {
    height: 100%;
    width: 100%;
    object-fit: contain;
  }

  .menu-navegacion {
    display: flex;
    align-items: center;
    gap: var(--espacio-items);
    flex: 1; /* Toma el espacio disponible */
    justify-content: center;
    min-width: 0; /* Permite que flex-basis: 0 funcione correctamente */
    overflow: visible; /* Evitamos scroll horizontal */
  }

  .menu-item {
    white-space: nowrap;
    flex-shrink: 0; /* No permitimos que estos ítems se compriman */
  }

  .menu-item a {
    display: flex;
    align-items: center;
  }

  .contenedor-opciones {
    display: flex;
    align-items: center;
    gap: 27px;
    margin-left: 20px;
  }

  .contenedor-buscador {
    width: 177px;
    height: 43px;
    gap: 8px;
    display: flex;
    align-items: center;
    border-radius: 4px;
    border: 1.5px solid #6e6e6e;
    background-color: #fff;
    padding: 14px;
    min-width: 150px; /* Ancho mínimo para mantener la funcionalidad */
    flex-shrink: 1; /* Permitir compresión si es necesario */
  }

  .contenedor-carrito {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 36px;
    padding: 0 27px;
    border-left: 1.5px solid var(--color-borde);
    border-right: 1.5px solid var(--color-borde);
    flex-shrink: 0; /* No comprimir */
  }

  .modo-entrega {
    display: flex;
    height: 36px;
    padding: 0 27px 0 0;
    gap: 0 8px;
    border-right: 1.5px solid var(--color-borde);
    flex-direction: column;
    align-items: flex-start;
    justify-content: center;
    flex-shrink: 1; /* Puede comprimirse si es necesario */
    min-width: 150px; /* Pero mantiene un mínimo */
  }

  .texto-entrega-titulo {
    text-transform: uppercase;
    font-weight: 600;
  }

  .contenedor-metodo {
    display: flex;
    align-items: center;
    gap: 4px;
  }

  .texto-metodo {
    white-space: nowrap;
  }

  .boton-login {
    border-radius: 4px;
    background: var(--color-rojo);
    gap: 8px;
    padding: 8px 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 36px;
    border: none;
    cursor: pointer;
    flex-shrink: 0; /* No permitir compresión */
  }

  .texto-login {
    color: #fff;
    white-space: nowrap;
  }

  /* Media queries refinadas para diferentes dispositivos 
   * centradas en tablets hacia arriba */
  @media screen and (max-width: 1300px) {
    header.encabezado {
      padding: 0 30px; /* Reducción del padding lateral */
    }

    .contenedor-buscador {
      width: 150px; /* Reducción del ancho del buscador */
    }

    .menu-navegacion {
      gap: 20px; /* Reducción del espacio entre elementos de navegación */
    }

    .contenedor-opciones {
      gap: 20px; /* Reducción del espacio entre opciones */
    }
  }

  @media screen and (max-width: 1150px) {
    /* Ajustar tamaños de texto para tablets grandes y desktops pequeños */
    h4 {
      font-size: 20px;
    }

    .contenedor-buscador {
      width: 130px;
      padding: 10px;
    }

    .contenedor-carrito {
      padding: 0 15px;
    }

    .modo-entrega {
      min-width: 130px;
      padding: 0 15px 0 0;
    }
  }

  @media screen and (max-width: 992px) {
    header.encabezado {
      padding: 0 20px;
    }

    .contenedor-logo {
      width: 110px;
      margin-right: 15px;
    }

    .menu-navegacion {
      justify-content: flex-start; /* Alinear a la izquierda para mejor control de espacio */
      gap: 15px;
    }

    .contenedor-opciones {
      gap: 15px;
    }

    .modo-entrega {
      min-width: 0;
    }

    /* Ajustar la altura y el padding del botón de login */
    .boton-login {
      padding: 8px 12px;
    }
  }

  @media screen and (max-width: 850px) {
    /* Optimización para iPads y tablets */
    .contenedor-buscador {
      width: 100px;
      padding: 8px;
    }

    .contenedor-carrito {
      padding: 0 10px;
    }

    h4 {
      font-size: 18px;
    }
  }

  @media screen and (max-width: 768px) {
    /* Para tablets en modo vertical */
    header.encabezado {
      padding: 0 15px;
      height: 80px; /* Reducir altura del header */
    }

    .contenedor-logo {
      width: 90px;
      height: 30px;
    }

    /* Reordenar prioridades de flexbox para preservar elementos importantes */
    .menu-navegacion {
      flex: 0 1 auto;
      gap: 10px;
    }

    .contenedor-buscador {
      min-width: 0;
      width: 36px; /* Mostrar solo el ícono */
      overflow: hidden;
    }

    .campo-busqueda {
      opacity: 0; /* Ocultar el input pero mantener funcionalidad */
      width: 0;
    }

    .modo-entrega {
      border-right: none;
      padding: 0;
    }

    .texto-entrega-titulo {
      display: none;
    }
  }
{% endstyle %}

<sticky-header>
  <header class="encabezado">
    <div class="contenedor-logo">
      <img
        class="logo"
        src="{{ 'logo-pizza-hut.png' | asset_url }}"
        alt="Logo Pizza Hut"
      >
    </div>

    <nav class="menu-navegacion">
      <div class="menu-item">
        <a href="/menu">
          <h4>Menú</h4>
        </a>
      </div>
      <div class="menu-item menu-hutcoins">
        <a href="/promociones">
          <h4>Hut Coins</h4>
          {% render 'icon-flecha-hutcoins' %}
        </a>
      </div>
      <div class="menu-item">
        <a href="/restaurantes">
          <h4>Sobre Nosotros</h4>
        </a>
      </div>
    </nav>

    <div class="contenedor-opciones">
      <div class="contenedor-buscador">
        {% render 'icon-search', class: 'icono-buscar' %}
        <input type="search" class="campo-busqueda" placeholder="Buscar...">
      </div>

      <div class="contenedor-carrito">
        {% render 'icon-carrito' %}
      </div>

      <div class="modo-entrega">
        <p class="texto-entrega-titulo">Selecciona tu</p>
        <div class="contenedor-metodo">
          <h4 class="texto-metodo">Método de entrega</h4>
          {% render 'icon-domicilio', class: 'icono-domicilio' %}
        </div>
      </div>

      <button class="boton-login">
        <h4 class="texto-login">Iniciar sesión</h4>
        {% render 'icon-search', class: 'icono-login' %}
      </button>
    </div>
  </header>
</sticky-header>

<script>
  class HeaderPrincipal extends HTMLElement {}
  customElements.define('sticky-header', HeaderPrincipal);
</script>
