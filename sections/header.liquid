<sticky-header>
  <header
    style="
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      z-index: 1000;
      padding: 0;
    "
  >
    <div
      style="
        display: flex;
        height: 78px;
        justify-content: space-between;
        align-items: center;
        border-radius: 8px;
        border: 1px solid #DEDEDE;
        background: #FFF;
        margin: 30px 59px 0 59px;
        padding: 20px 15px;
      "
    >
      <!-- LOGO DE PIZZA HUT -->
      <div class="logo-container">
        <a href="/">
          <img
            src="{{ 'logo-pizza-hut.png' | asset_url }}"
            alt="Pizza Hut Logo"
            style="
              height: 41px;
              width: 170px;
              margin-left: 20px;
              object-fit: cover;
            "
          >
        </a>
      </div>

      <!-- OPCIONES -->
      <nav class="menu-options">
        <ul style="display: flex; gap: 20px; list-style: none; margin: 0; padding: 0;">
          <li><a href="/menu" style="text-decoration: none; color: #333;">Menú</a></li>
          <li><a href="/promociones" style="text-decoration: none; color: #333;">Promociones</a></li>
          <li><a href="/restaurantes" style="text-decoration: none; color: #333;">Restaurantes</a></li>
        </ul>
      </nav>

      <!-- BUSCADOR -->
      <div class="search-container" style="position: relative;">
        <input
          type="search"
          placeholder="Buscar productos..."
          style="padding: 8px; border-radius: 4px; border: 1px solid #DEDEDE;"
        >
        <button style="position: absolute; right: 8px; top: 50%; transform: translateY(-50%); border: none; background: none;">
          🔍
        </button>
      </div>

      <!-- CARRITO -->
      <div class="cart-container" style="margin: 0 20px;">
        <button style="position: relative; border: none; background: none;">
          🛒
          <span style="position: absolute; top: -8px; right: -8px; background: red; color: white; border-radius: 50%; padding: 2px 6px; font-size: 12px;"
            >0</span
          >
        </button>
      </div>

      <!-- MODALIDAD DE ENTREGA -->
      <div class="delivery-mode" style="margin: 0 20px;">
        <select style="padding: 8px; border-radius: 4px; border: 1px solid #DEDEDE;">
          <option value="delivery">Delivery</option>
          <option value="pickup">Para llevar</option>
          <option value="dine-in">Para comer aquí</option>
        </select>
      </div>

      <!-- ESTADO USUARIO -->
      <div class="user-status" style="margin-right: 20px;">
        <button style="border: none; background: none; display: flex; align-items: center; gap: 8px;">
          👤
          <span>Iniciar sesión</span>
        </button>
      </div>
    </div>
  </header>
</sticky-header>

<script>
  class HeaderPrincipal extends HTMLElement {}

  customElements.define('sticky-header', HeaderPrincipal);
</script>
