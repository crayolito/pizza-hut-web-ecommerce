{% style %}
  :root {
    --fuente-principal: 'League Gothic', sans-serif;
    --fuente-secundaria: 'Montserrat', sans-serif;
    --color-primario: #231f20;
    --color-borde: #dedede;
    --color-borde-oscuro: #969696;
  }

  .encabezado {
    width: 100%;
    height: 5.5rem;
    padding: 0 3rem;
    background-color: #fff;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .contenedor-logo {
    height: 5.5rem;
    width: 8.5rem;
  }

  .logo {
    height: 100%;
    width: 100%;
    object-fit: contain;
  }

  .menu-navegacion {
    display: flex;
    align-items: center;
    gap: 2rem;
    width: auto;
  }

  .hut-coins {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .contenedor-buscador {
    width: 11.06rem;
    height: 2.69rem;
    gap: 0.5rem;
    display: flex;
    align-items: center;
    border-radius: 0.25rem;
    border: 0.094rem solid #6e6e6e;
    background-color: #fff;
    padding: 0.88rem;
    font-size: 1rem;
  }

  .boton-login {
    border-radius: 4px;
    background: #c8102e;
    gap: 8px;
    padding: 8px 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 160px;
    height: 42px;
    /* Importante: asegurar que el contenido no rompa el botón */
    overflow: hidden; /* Previene que el contenido sobresalga */
    white-space: nowrap; /* Evita que el texto se envuelva */
  }

  .texto-login {
    color: #fff;
    font-size: clamp(14px, 0.5vw + 12px, 16px); /* Fórmula más conservadora */
    margin: 0;
    /* Opciones de seguridad adicionales */
    line-height: 1.2; /* Controlar la altura de línea */
    max-height: 20px; /* Limitar altura máxima del texto */
  }
{% endstyle %}

<sticky-header>
  <header class="encabezado">
    <div class="contenedor-logo">
      <img
        src="{{ 'logo-pizza-hut.png' | asset_url }}"
        alt="Logo Pizza Hut"
        class="logo"
      >
    </div>

    <nav
      class="menu-navegacion"
    >
      <div class="menu-item">
        <a href="/menu">
          <h4>Menú</h4>
        </a>
      </div>
      <div class="menu-item menu-hutcoins">
        <a
          class="hut-coins"
          href="/promociones"
        >
          <h4>Hut Coins</h4>
          {% render 'icon-flecha-hutcoins' %}
        </a>
      </div>
      <div class="menu-item">
        <a href="/restaurantes">
          <h4>Sobre Nosotros</h4>
        </a>
      </div>
    </nav>

    <div
      style="
        display: flex;
        align-items: center;
        gap: 25px;
      "
      class="contenedor-opciones"
    >
      <div class="contenedor-buscador">
        {% render 'icon-search', class: 'icono-buscar' %}
        <input type="search" class="campo-busqueda" placeholder="Buscar...">
      </div>

      <div
        style="display:flex; align-items: center; justify-content: center; height: 36px;padding: 0px 25px; border-left: 1.5px solid #DEDEDE; border-right: 1.5px solid #DEDEDE;"
        class="contenedor-carrito"
      >
        {% render 'icon-carrito' %}
      </div>

      <div
        style="
          display: flex;
          height: 36px;
          padding: 0px 2px 0px 0px;
          gap: 0px 8px;
          border-right: 1.5px solid #DEDEDE;
          flex-direction: column;
          align-items: start;
          justify-content: center;
        "
        class="modo-entrega"
      >
        <p
          style="
            text-transform: uppercase;
            font-weight: 600;
          "
          class="texto-entrega-titulo"
        >
          Selecciona tu
        </p>
        <div
          style="
            display: flex;
            align-items: center;
            gap: 4px;
          "
          class="contenedor-metodo"
        >
          <h4 class="texto-metodo">Método de entrega</h4>
          {% render 'icon-domicilio', class: 'icono-domicilio' %}
        </div>
      </div>

      <button
        class="boton-login"
      >
        <h4
          style="color: #FFF;"
          class="texto-login"
        >
          Iniciar sesión
        </h4>
        {% render 'icon-search' %}
      </button>
    </div>
  </header>
</sticky-header>

<script>
  class HeaderPrincipal extends HTMLElement {}
  customElements.define('sticky-header', HeaderPrincipal);
</script>
