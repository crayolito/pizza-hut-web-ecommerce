{% style %}
  :root {
    --fuente-principal: 'League Gothic', sans-serif;
    --fuente-secundaria: 'Montserrat', sans-serif;
    --color-primario: #231f20;
    --color-borde: #dedede;
    --color-borde-oscuro: #969696;
  }

  /* Estilos de tipografía exactamente como los tenías */
{% endstyle %}

<sticky-header>
  <header
    style="
      width: 100%;
      height: clamp(65px, 10vh + 35px, 120px);
      padding: 0 clamp(37px, 2.2vw + 21px, 69px);
      background-color: #FFF;
      display: flex;
      justify-content: space-between;
      align-items: center;
    "
    class="encabezado"
  >
    <div
      style="
        height: clamp(26px, 1.5vw + 12px, 52px);
        width: clamp(95px, 5.7vw + 55px, 177px);
        margin-right: clamp(42px, 0.25vw + 57px, 78px);
      "
      class="contenedor-logo"
    >
      <img
        style="
          height: 100%;
          width: 100%;
          object-fit: contain;
        "
        src="{{ 'logo-pizza-hut.png' | asset_url }}"
        alt="Logo Pizza Hut"
        class="logo"
      >
    </div>

    <nav
      style="
         display: flex;
         align-items: center;
         gap: clamp(20px, 1.2vw + 12px, 38px);
         width: auto;
        margin-right: clamp(43px, 0.26vw + 58px, 81px);
      "
      class="menu-navegacion"
    >
      <div class="menu-item">
        <a href="/menu">
          <h4>Menú</h4>
        </a>
      </div>
      <div class="menu-item menu-hutcoins">
        <a
          style="
            display: flex;
            align-items: center;
            justify-content: center;
          "
          href="/promociones"
        >
          <h4>Hut Coins</h4>
          {% render 'icon-flecha-hutcoins' %}
        </a>
      </div>
      <div class="menu-item">
        <a href="/restaurantes">
          <h4>Sobre Nosotros</h4>
        </a>
      </div>
    </nav>

    <div
      style="
        display: flex;
        align-items: center;
        gap: clamp(19px, 1.1vw + 11px, 35px);
      "
      class="contenedor-opciones"
    >
      <div
        style="
           width: clamp(124px, 7.4vw + 68px, 230px);
           height: clamp(30px, 1.8vw + 17px, 56px);
          gap: clamp(4px, 0.25vw + 2px, 8px);
           display: flex;
           align-items: center;
           border-radius: 4px;
           border: 1.5px solid #6E6E6E;
           background-color: #FFF;
           padding: clamp(10px, 0.6vw + 6px, 18px);
        "
        class="contenedor-buscador"
      >
        {% render 'icon-search' %}
        <input type="search" class="campo-busqueda" placeholder="Buscar...">
      </div>

      <div
        style="
          display:flex;
          align-items: center;
          justify-content: center;
          height: clamp(25px, 1.5vw + 13px, 47px);
          padding: 0px clamp(19px, 1.1vw + 12px, 35px);
          border-left: 1.5px solid #DEDEDE;
          border-right: 1.5px solid #DEDEDE;
        "
        class="contenedor-carrito"
      >
        {% render 'icon-carrito' %}
      </div>

      <div
        style="
          display: flex;
          height: clamp(25px, 1.5vw + 13px, 47px);
          padding: 0px clamp(19px, 1.1vw + 12px, 35px) 0px 0px;
          gap: clamp(4px, 0.25vw + 2px, 8px);
          border-right: 1.5px solid #DEDEDE;
          flex-direction: column;
          align-items: start;
          justify-content: center;
        "
        class="modo-entrega"
      >
        <p
          style="
            text-transform: uppercase;
            font-weight: 600;
                font-size: clamp(9px, 0.5vw + 5px, 17px);
          "
          class="texto-entrega-titulo"
        >
          Selecciona tu
        </p>
        <div
          style="
            display: flex;
            align-items: center;
            gap: clamp(3px, 0.2vw + 2px, 5px);
          "
          class="contenedor-metodo"
        >
          <h4 class="texto-metodo">Método de entrega</h4>
          {% render 'icon-domicilio', class: 'icono-domicilio' %}
        </div>
      </div>

      <button
        style="
          width: clamp(100px, 5.9vw + 59px, 186px);
          height: clamp(26px, 1.5vh + 15px, 48px);
                    border-radius: 4px;
                    background: #C8102E;
                    gap: clamp(2px, 0.15vw + 1px, 5px);
                    padding: clamp(6px, 0.3vw + 5px, 10px) clamp(11px, 0.7vw + 8px, 21px);
                    display: flex;
                    align-items: center;
                    justify-content: center;
        "
        class="boton-login"
      >
        <h4
          style="color: #FFF;"
          class="texto-login"
        >
          Iniciar sesión
        </h4>
        {% render 'icon-search', class: 'icono-login' %}
      </button>
    </div>
  </header>
</sticky-header>

<script>
  class HeaderPrincipal extends HTMLElement {}
  customElements.define('sticky-header', HeaderPrincipal);
</script>
