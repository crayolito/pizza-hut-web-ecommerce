{% style %}
  :root {
    --fuente-principal: 'League Gothic', sans-serif;
    --fuente-secundaria: 'Montserrat', sans-serif;
    --color-primario: #231f20;
    --color-borde: #dedede;
    --color-borde-oscuro: #969696;
  }

  .encabezado {
    display: flex;
    width: 100%;
    height: clamp(3.5rem, 3.5rem * 1.5, 5.47rem);
    padding: clamp(1rem, 1rem * 0.5, 1.875rem) clamp(1.5rem, 1.5rem * 0.5, 2.5rem);
    justify-content: space-between;
    align-items: center;
    flex-shrink: 0;
    border: 1px solid #dedede;
    background: #fff;
  }

  .contenedor-logo img {
    width: clamp(3.5rem, 3.5rem * 0.3, 8.2rem);
    height: auto;
    object-fit: contain;
  }

  /*
    clamp(valor-móvil, [valor-móvil × 1.5]vh, valor-desktop)
    clamp(valor-móvil, [valor-móvil × 2]vw, valor-desktop)
    clamp(valor-móvil, [valor-móvil × 1]vh, valor-desktop)
    width: clamp(valor-móvil, [valor-móvil × 0.3]vw, valor-desktop);

    Width(ancho): 
    Reducir un  20%  del valor original
    
    Padding y Margin:
    Reudcir un 25% del valor original

    Height(alto):
    Reducir un 20% del valor original 
  */
  /* Tablet y desktop pequeño */
  /* @media screen and (max-width: 990px) {
    .encabezado {
      height: 4.5rem;
      padding: 1.5rem 2rem;
    }

    .contenedor-logo img {
      width: 6.5rem;
    }
  } */

  /*
    Width(ancho): 
    Reducir un  40%  del valor original
    
    Padding y Margin:
    Reudcir un 50% del valor original

    Height(alto):
    Reducir un  35% del valor original 
  */
  /* Móvil */
  /* @media screen and (max-width: 749px) {
    .encabezado {
      height: 3.5rem;
      padding: 1rem;
    }

    .contenedor-logo img {
      width: 5rem;
    }
  } */
{% endstyle %}

<sticky-header>
  <header class="encabezado">
    <div class="contenedor-logo">
      <img src="{{ 'logo-pizza-hut.png' | asset_url }}" alt="Logo Pizza Hut">
    </div>

    {% comment %}
      <!-- Menú de Navegación -->
      <nav class="menu-opciones">
        <h4 class="menu-item">
          <a href="/menu">Menú</a>
        </h4>
        <h4 class="menu-item">
          <a href="/promociones" class="enlace-hutcoins">
            Hut Coins
            {% render 'icon-flecha-hutcoins' %}
          </a>
        </h4>
        <h4 class="menu-item">
          <a href="/restaurantes">Sobre Nosotros</a>
        </h4>
      </nav>

      <!-- Buscador -->
      <div class="contenedor-buscador">
        {% render 'icon-search' %}
        <input type="search" class="input-buscador" placeholder="Buscar...">
      </div>

      <!-- Carrito y Entrega -->
      <div class="contenedor-carrito">
        {% render 'icon-carrito' %}
        <div class="modo-entrega">
          {% render 'icon-domicilio' %}
          <h4 class="texto-entrega">DOMICILIO</h4>
        </div>
      </div>

      <!-- Estado Usuario -->
      <div class="estado-usuario">
        {% render 'icon-perfil-usuario' %}
        {% render 'icon-flecha-abajo' %}
      </div>
    {% endcomment %}
  </header>
</sticky-header>

<script>
  class HeaderPrincipal extends HTMLElement {}
  customElements.define('sticky-header', HeaderPrincipal);
</script>
