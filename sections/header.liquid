{% style %}
  :root {
    --fuente-principal: 'League Gothic', sans-serif;
    --fuente-secundaria: 'Montserrat', sans-serif;
    --color-primario: #231f20;
    --color-borde: #dedede;
    --color-borde-oscuro: #969696;
    --color-rojo: #c8102e;
    --altura-header: 5.625rem; /* 90px convertido a rem */
    --padding-lateral: 3.3125rem; /* 53px convertido a rem */
    --espacio-items: 1.8125rem; /* 29px convertido a rem */
  }

  /* Estilos generales responsivos */
  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  /* Estilos de tipografía con unidades relativas */
  h4 {
    font-family: var(--fuente-principal);
    font-size: 1.5rem;
    font-style: normal;
    font-weight: 400;
    line-height: 1.6875rem;
    letter-spacing: -0.03rem;
    text-transform: uppercase;
  }

  h3 {
    font-family: var(--fuente-principal);
    font-size: 2rem;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
    letter-spacing: -0.04rem;
    text-transform: uppercase;
  }

  h2 {
    font-family: var(--fuente-principal);
    font-size: 2.25rem;
    font-style: normal;
    line-height: normal;
    text-transform: uppercase;
  }

  p {
    font-family: var(--fuente-secundaria);
    font-size: 1rem;
    font-style: normal;
    font-weight: 400;
    line-height: 1.6875rem;
  }

  a {
    text-decoration: none;
    color: inherit;
    cursor: pointer;
  }

  input {
    font-family: var(--fuente-secundaria);
    font-size: 1rem;
    line-height: 1.6875rem;
    margin: 0;
    padding: 0;
    border: none;
    outline: none;
    background: transparent;
    width: 100%;
  }

  /* Estilos del encabezado responsivos */
  header.encabezado {
    width: 100%;
    height: var(--altura-header);
    padding: 0 var(--padding-lateral);
    background-color: #fff;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .contenedor-logo {
    height: 2.3125rem; /* 37px */
    width: 8.5rem; /* 136px */
    flex-shrink: 0;
    margin-right: 1rem;
  }

  .logo {
    height: 100%;
    width: 100%;
    object-fit: contain;
  }

  .menu-navegacion {
    display: flex;
    align-items: center;
    gap: var(--espacio-items);
    flex-grow: 1;
    flex-basis: 0;
    justify-content: center;
    overflow-x: auto;
    -ms-overflow-style: none; /* IE and Edge */
    scrollbar-width: none; /* Firefox */
  }

  .menu-navegacion::-webkit-scrollbar {
    display: none; /* Chrome, Safari, Opera */
  }

  .menu-item {
    white-space: nowrap;
  }

  .contenedor-opciones {
    display: flex;
    align-items: center;
    gap: 1.6875rem; /* 27px */
    flex-shrink: 0;
    margin-left: 1rem;
  }

  .contenedor-buscador {
    width: 11.0625rem; /* 177px */
    height: 2.6875rem; /* 43px */
    gap: 0.5rem; /* 8px */
    display: flex;
    align-items: center;
    border-radius: 0.25rem; /* 4px */
    border: 0.09375rem solid #6e6e6e; /* 1.5px */
    background-color: #fff;
    padding: 0.875rem; /* 14px */
  }

  .contenedor-carrito {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 2.25rem; /* 36px */
    padding: 0 1.6875rem; /* 0 27px */
    border-left: 0.09375rem solid var(--color-borde); /* 1.5px */
    border-right: 0.09375rem solid var(--color-borde); /* 1.5px */
  }

  .modo-entrega {
    display: flex;
    height: 2.25rem; /* 36px */
    padding: 0 1.6875rem 0 0; /* 0 27px 0 0 */
    gap: 0 0.5rem; /* 0 8px */
    border-right: 0.09375rem solid var(--color-borde); /* 1.5px */
    flex-direction: column;
    align-items: flex-start;
    justify-content: center;
  }

  .texto-entrega-titulo {
    text-transform: uppercase;
    font-weight: 600;
  }

  .contenedor-metodo {
    display: flex;
    align-items: center;
    gap: 0.25rem; /* 4px */
  }

  .boton-login {
    border-radius: 0.25rem; /* 4px */
    background: var(--color-rojo);
    gap: 0.5rem; /* 8px */
    padding: 0.5rem 1rem; /* 8px 16px */
    display: flex;
    align-items: center;
    justify-content: center;
    height: 2.25rem; /* 36px */
    border: none;
    cursor: pointer;
  }

  .texto-login {
    color: #fff;
    white-space: nowrap;
  }

  /* Media queries para ajustar a distintos tamaños de pantalla */
  @media screen and (max-width: 1200px) {
    :root {
      --padding-lateral: 2rem;
      --espacio-items: 1.25rem;
    }

    .contenedor-buscador {
      width: 9rem;
    }

    .contenedor-carrito,
    .modo-entrega {
      padding: 0 1rem;
    }
  }

  @media screen and (max-width: 992px) {
    .modo-entrega {
      display: none;
    }

    .contenedor-buscador {
      width: 8rem;
    }
  }

  @media screen and (max-width: 768px) {
    :root {
      --padding-lateral: 1rem;
    }

    h4 {
      font-size: 1.25rem;
    }

    .contenedor-logo {
      width: 6.5rem;
    }
  }
{% endstyle %}

<sticky-header>
  <header class="encabezado">
    <div class="contenedor-logo">
      <img
        class="logo"
        src="{{ 'logo-pizza-hut.png' | asset_url }}"
        alt="Logo Pizza Hut"
      >
    </div>

    <nav class="menu-navegacion">
      <div class="menu-item">
        <a href="/menu">
          <h4>Menú</h4>
        </a>
      </div>
      <div class="menu-item menu-hutcoins">
        <a style="display: flex; align-items: center; justify-content: center;" href="/promociones">
          <h4>Hut Coins</h4>
          {% render 'icon-flecha-hutcoins' %}
        </a>
      </div>
      <div class="menu-item">
        <a href="/restaurantes">
          <h4>Sobre Nosotros</h4>
        </a>
      </div>
    </nav>

    <div class="contenedor-opciones">
      <div class="contenedor-buscador">
        {% render 'icon-search', class: 'icono-buscar' %}
        <input type="search" class="campo-busqueda" placeholder="Buscar...">
      </div>

      <div class="contenedor-carrito">
        {% render 'icon-carrito' %}
      </div>

      <div class="modo-entrega">
        <p class="texto-entrega-titulo">Selecciona tu</p>
        <div class="contenedor-metodo">
          <h4 class="texto-metodo">Método de entrega</h4>
          {% render 'icon-domicilio', class: 'icono-domicilio' %}
        </div>
      </div>

      <button class="boton-login">
        <h4 class="texto-login">Iniciar sesión</h4>
        {% render 'icon-search', class: 'icono-login' %}
      </button>
    </div>
  </header>
</sticky-header>

<script>
  class HeaderPrincipal extends HTMLElement {}
  customElements.define('sticky-header', HeaderPrincipal);
</script>
