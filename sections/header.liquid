<sticky-header>
  <header
    style="
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      z-index: 1000;
      padding: 0;
    "
  >
    <div
      style="
        display: flex;
        height: 78px;
        justify-content: space-between;
        align-items: center;
        border-radius: 8px;
        border: 1px solid #DEDEDE;
        background: #FFF;
        margin: 30px 59px 0 59px;
        padding: 15px;
      "
    >
      <!-- LOGO DE PIZZA HUT -->
      <div class="logo-container">
        <a href="/">
          <img
            src="{{ 'logo-pizza-hut.png' | asset_url }}"
            alt="Pizza Hut Logo"
            style="
              height: 35px;
              width: 170px;
              margin-left: 20px;
              object-fit: cover;
            "
          >
        </a>
      </div>

      <!-- OPCIONES -->
      <nav class="menu-options" style="display: flex; align-items: center; gap: 32px;">
        <a
          href="/menu"
          style="
            text-decoration: none;
            color: #333;
            font-size: 16px;
            font-weight: 500;
            line-height: normal;
          "
          >Menú</a
        >

        <a
          href="/promociones"
          style="
            text-decoration: none;
            color: #333;
            font-size: 16px;
            font-weight: 500;
            display: flex;
            align-items: center;
            gap: 4px;
            line-height: normal;
          "
        >
          Hut Coins
