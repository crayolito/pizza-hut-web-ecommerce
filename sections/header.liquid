{% style %}
  :root {
    --fuente-principal: 'League Gothic', sans-serif;
    --fuente-secundaria: 'Montserrat', sans-serif;
    --color-primario: #231f20;
    --color-borde: #dedede;
    --color-borde-oscuro: #969696;
    --color-rojo: #c8102e;
  }

  /* Base styles (mobile first) */
  .encabezado {
    width: 100%;
    height: 4rem; /* 64px */
    padding: 0 1rem; /* 16px */
    background-color: #fff;
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: relative;
    z-index: 100;
  }

  .contenedor-logo {
    height: 4rem;
    width: 6rem; /* 96px */
  }

  .logo {
    height: 100%;
    width: 100%;
    object-fit: contain;
  }

  /* Menú de navegación */
  .menu-navegacion {
    display: none; /* Oculto en móvil por defecto */
    align-items: center;
    gap: 1rem;
    width: auto;
  }

  .menu-item h4 {
    font-family: var(--fuente-principal);
    white-space: nowrap;
  }

  .hut-coins {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 4px;
  }

  /* Botón de menú hamburguesa para móvil */
  .menu-toggle {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    width: 1.5rem; /* 24px */
    height: 1.25rem; /* 20px */
    cursor: pointer;
  }

  .menu-toggle span {
    display: block;
    height: 2px;
    width: 100%;
    background-color: var(--color-primario);
    transition: all 0.3s ease;
  }

  /* Contenedor de opciones */
  .contenedor-opciones {
    display: flex;
    align-items: center;
    gap: 0.75rem; /* 12px en móvil */
  }

  /* Buscador */
  .contenedor-buscador {
    width: 8rem; /* 128px */
    height: 2rem; /* 32px */
    gap: 0.25rem; /* 4px */
    display: flex;
    align-items: center;
    border-radius: 0.25rem; /* 4px */
    border: 0.094rem solid var(--color-borde-oscuro); /* 1.5px */
    background-color: #fff;
    padding: 0.5rem; /* 8px */
    font-size: 0.875rem; /* 14px */
  }

  .campo-busqueda {
    border: none;
    outline: none;
    width: 100%;
    font-family: var(--fuente-secundaria);
    font-size: inherit;
  }

  /* Carrito */
  .contenedor-carrito {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 2.25rem; /* 36px */
    padding: 0 0.75rem; /* 0px 12px */
    border-left: 1.5px solid var(--color-borde);
    border-right: 1.5px solid var(--color-borde);
  }

  /* Modo entrega - Oculto en móvil */
  .modo-entrega {
    display: none;
    height: 2.25rem; /* 36px */
    padding: 0 0.75rem 0 0; /* 0px 12px 0px 0px */
    gap: 0 0.5rem; /* 0px 8px */
    border-right: 1.5px solid var(--color-borde);
    flex-direction: column;
    align-items: start;
    justify-content: center;
  }

  .texto-entrega-titulo {
    text-transform: uppercase;
    font-weight: 600;
    font-family: var(--fuente-secundaria);
    font-size: 0.6875rem; /* 11px */
    margin: 0;
  }

  .contenedor-metodo {
    display: flex;
    align-items: center;
    gap: 4px;
  }

  .texto-metodo {
    font-family: var(--fuente-principal);
    font-size: 0.875rem; /* 14px */
    margin: 0;
    white-space: nowrap;
  }

  /* Botón login */
  .boton-login {
    border-radius: 4px;
    background: var(--color-rojo);
    gap: 8px;
    padding: 4px 8px; /* Reducido para móvil */
    display: flex;
    align-items: center;
    justify-content: center;
    height: 2.25rem; /* 36px */
    border: none;
    cursor: pointer;
  }

  .texto-login {
    color: #fff;
    font-family: var(--fuente-principal);
    font-size: 0.875rem; /* 14px */
    margin: 0;
    white-space: nowrap;
  }

  /* Ocultar texto de login en móvil */
  @media screen and (max-width: 767px) {
    .texto-login {
      display: none;
    }
  }

  /* Móviles pequeños (hasta 320px) */
  @media screen and (max-width: 320px) {
    .encabezado {
      height: 3.5rem; /* 56px */
      padding: 0 0.75rem; /* 12px */
    }

    .contenedor-logo {
      height: 3.5rem;
      width: 5rem; /* 80px */
    }

    .contenedor-opciones {
      gap: 0.5rem; /* 8px */
    }

    .contenedor-buscador {
      width: 6.25rem; /* 100px */
      height: 1.75rem; /* 28px */
      padding: 0.375rem; /* 6px */
      font-size: 0.75rem; /* 12px */
    }

    .contenedor-carrito {
      padding: 0 0.5rem; /* 0px 8px */
      height: 1.75rem; /* 28px */
    }

    .boton-login {
      padding: 4px;
      height: 1.75rem; /* 28px */
    }
  }

  /* Móviles medianos (321px - 375px) */
  @media screen and (min-width: 321px) and (max-width: 375px) {
    .encabezado {
      height: 3.75rem; /* 60px */
      padding: 0 0.875rem; /* 14px */
    }

    .contenedor-logo {
      height: 3.75rem;
      width: 5.5rem; /* 88px */
    }

    .contenedor-buscador {
      width: 7rem; /* 112px */
    }
  }

  /* Móviles grandes (376px - 480px) */
  @media screen and (min-width: 376px) and (max-width: 480px) {
    .encabezado {
      height: 4rem; /* 64px */
      padding: 0 1rem; /* 16px */
    }

    .contenedor-logo {
      height: 4rem;
      width: 6rem; /* 96px */
    }
  }

  /* Móviles en horizontal y tablets pequeñas (481px - 767px) */
  @media screen and (min-width: 481px) and (max-width: 767px) {
    .encabezado {
      height: 4.5rem; /* 72px */
      padding: 0 1.5rem; /* 24px */
    }

    .contenedor-logo {
      height: 4.5rem;
      width: 7rem; /* 112px */
    }

    .contenedor-opciones {
      gap: 1rem; /* 16px */
    }

    .contenedor-buscador {
      width: 9rem; /* 144px */
      height: 2.25rem; /* 36px */
      font-size: 0.9375rem; /* 15px */
    }
  }

  /* Tablets (768px - 991px) */
  @media screen and (min-width: 768px) and (max-width: 991px) {
    .encabezado {
      height: 5rem; /* 80px */
      padding: 0 2rem; /* 32px */
    }

    .contenedor-logo {
      height: 5rem;
      width: 7.5rem; /* 120px */
    }

    /* Mostrar menú en tablets */
    .menu-navegacion {
      display: flex;
      gap: 1.5rem; /* 24px */
    }

    .contenedor-opciones {
      gap: 1.25rem; /* 20px */
    }

    .contenedor-buscador {
      width: 10rem; /* 160px */
      height: 2.5rem; /* 40px */
      padding: 0.75rem; /* 12px */
      font-size: 1rem; /* 16px */
    }

    /* Mostrar modo entrega en tablets */
    .modo-entrega {
      display: flex;
    }

    .menu-toggle {
      display: none; /* Ocultar hamburguesa en tablets */
    }

    .boton-login {
      padding: 6px 12px;
    }
  }

  /* Tablets grandes y laptops pequeñas (992px - 1199px) */
  @media screen and (min-width: 992px) and (max-width: 1199px) {
    .encabezado {
      height: 5.25rem; /* 84px */
      padding: 0 2.5rem; /* 40px */
    }

    .contenedor-logo {
      height: 5.25rem;
      width: 8rem; /* 128px */
    }

    .menu-navegacion {
      gap: 1.75rem; /* 28px */
    }

    .contenedor-opciones {
      gap: 1.5rem; /* 24px */
    }

    .contenedor-buscador {
      width: 10.5rem; /* 168px */
    }

    .modo-entrega {
      padding: 0 1rem 0 0; /* 0px 16px 0px 0px */
    }
  }

  /* Desktops y laptops (1200px - 1439px) */
  @media screen and (min-width: 1200px) and (max-width: 1439px) {
    .encabezado {
      height: 5.5rem; /* 88px */
      padding: 0 3rem; /* 48px */
    }

    .contenedor-logo {
      height: 5.5rem;
      width: 8.5rem; /* 136px */
    }

    .menu-navegacion {
      gap: 2rem; /* 32px */
    }

    .contenedor-opciones {
      gap: 1.75rem; /* 28px */
    }

    .contenedor-buscador {
      width: 11.06rem; /* 177px */
      height: 2.69rem; /* 43px */
      padding: 0.88rem; /* 14px */
    }

    .contenedor-carrito {
      padding: 0 1.7rem; /* 0px 27px */
    }

    .modo-entrega {
      padding: 0 1.7rem 0 0; /* 0px 27px 0px 0px */
      gap: 0 0.5rem; /* 0px 8px */
    }
  }

  /* Pantallas grandes (1440px en adelante) */
  @media screen and (min-width: 1440px) {
    .encabezado {
      height: 6rem; /* 96px */
      padding: 0 4rem; /* 64px */
    }

    .contenedor-logo {
      height: 6rem;
      width: 9.5rem; /* 152px */
    }

    .menu-navegacion {
      gap: 2.5rem; /* 40px */
    }

    .contenedor-opciones {
      gap: 2rem; /* 32px */
    }

    .contenedor-buscador {
      width: 12.5rem; /* 200px */
      height: 3rem; /* 48px */
      padding: 1rem; /* 16px */
      font-size: 1.125rem; /* 18px */
    }

    .texto-entrega-titulo {
      font-size: 0.75rem; /* 12px */
    }

    .texto-metodo {
      font-size: 1rem; /* 16px */
    }

    .boton-login {
      padding: 8px 16px;
    }

    .texto-login {
      font-size: 1rem; /* 16px */
    }
  }

  /* Menú móvil desplegable */
  .menu-movil {
    display: none;
    position: absolute;
    top: 100%;
    left: 0;
    width: 100%;
    background-color: #fff;
    padding: 1rem;
    box-shadow: 0 5px 10px rgba(0, 0, 0, 0.1);
    z-index: 90;
  }

  .menu-movil.activo {
    display: block;
  }

  .menu-movil .menu-item {
    padding: 0.75rem 0;
    border-bottom: 1px solid var(--color-borde);
  }

  .menu-movil .menu-item:last-child {
    border-bottom: none;
  }
{% endstyle %}
