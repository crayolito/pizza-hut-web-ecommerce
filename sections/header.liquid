{% style %}
  :root {
    --fuente-principal: 'League Gothic', sans-serif;
    --fuente-secundaria: var(--fuente-secundaria);
    --color-primario: #231f20;
    --color-borde: #dedede;
    --color-borde-oscuro: #969696;
  }

  .encabezado {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    padding: 0;
    font-family: var(--fuente-principal);
  }

  .contenedor-encabezado {
    display: flex;
    height: 78px;
    justify-content: space-between;
    align-items: center;
    border-radius: 8px;
    border: 1px solid var(--color-borde);
    background: #fff;
    margin: 30px 59px 0;
    padding: 10px 20px;
  }

  .contenedor-logo {
    height: 35px;
    width: 170px;
  }

  .enlace-logo img {
    height: 100%;
    width: 100%;
    object-fit: contain;
  }

  .menu-opciones {
    display: flex;
    align-items: center;
    gap: 32px;
  }

  .menu-item {
    font-family: var(--fuente-principal);
    font-size: 24px;
    font-weight: 400;
    line-height: 1.2;
    letter-spacing: -0.48px;
    text-transform: uppercase;
    color: var(--color-primario);
    margin: 0;
  }

  .menu-item a {
    text-decoration: none;
    color: inherit;
    white-space: nowrap;
  }

  .enlace-hutcoins {
    display: flex;
    align-items: center;
    gap: 4px;
  }

  .contenedor-buscador {
    position: relative;
    display: flex;
    padding: 20px;
    align-items: center;
    gap: 4px;
    align-self: stretch;
    min-width: 200px;
  }

  .input-buscador {
    width: 100%;
    padding: 8px 12px 8px 40px;
    border-radius: 4px;
    border: 1px solid var(--color-borde-oscuro);
    font-family: var(--fuente-secundaria);
    font-size: 16px;
    font-weight: 400;
    color: var(--color-primario);
    outline: none;
  }

  .contenedor-carrito {
    height: 65%;
    border-right: 1.5px solid var(--color-borde-oscuro);
    border-left: 1.5px solid var(--color-borde-oscuro);
    padding: 0 24px;
    display: flex;
    align-items: center;
    gap: 24px;
  }

  .modo-entrega {
    display: flex;
    align-items: center;
    gap: 8px;
    padding-left: 24px;
    border-left: 1.5px solid var(--color-borde-oscuro);
    height: 100%;
  }

  .texto-entrega {
    font-family: var(--fuente-principal);
    font-size: 24px;
    font-weight: 400;
    line-height: 1.2;
    letter-spacing: -0.48px;
    text-transform: uppercase;
    color: var(--color-primario);
    margin: 0;
  }

  .estado-usuario {
    display: flex;
    align-items: center;
    gap: 4px;
  }

  /* Media Queries para adaptabilidad */
  /* Laptops y Desktops pequeños: 1024px - 1366px */
  @media screen and (min-width: 1367px) and (max-width: 1439px) {
    .test-prueba-tama1 {
      display: flex;
    }
  }

  /* Monitores grandes: 1440px - 1919px */
  @media screen and (min-width: 1440px) and (max-width: 1919px) {
    .test-prueba-tama2 {
      display: flex;
    }
  }

  /* Monitores extra grandes: 1920px y superior */
  @media screen and (min-width: 1920px) {
    .test-prueba-tama3 {
      display: flex;
    }
  }
{% endstyle %}

<sticky-header>
  <header class="encabezado">
    <div class="contenedor-encabezado">
      <!-- Logo -->
      <div class="contenedor-logo">
        <a href="/" class="enlace-logo">
          <img src="{{ 'logo-pizza-hut.png' | asset_url }}" alt="Logo Pizza Hut">
        </a>
      </div>

      <!-- Menú de Navegación -->
      <nav class="menu-opciones">
        <h4 class="menu-item">
          <a href="/menu">Menú</a>
        </h4>
        <h4 class="menu-item">
          <a href="/promociones" class="enlace-hutcoins">
            Hut Coins
            {% render 'icon-flecha-hutcoins' %}
          </a>
        </h4>
        <h4 class="menu-item">
          <a href="/restaurantes">Sobre Nosotros</a>
        </h4>
      </nav>

      <!-- Buscador -->
      <div class="contenedor-buscador">
        {% render 'icon-search' %}
        <input type="search" class="input-buscador" placeholder="Buscar...">
      </div>

      <!-- Carrito y Entrega -->
      <div class="contenedor-carrito">
        {% render 'icon-carrito' %}
        <div class="modo-entrega">
          {% render 'icon-domicilio' %}
          <h4 class="texto-entrega">DOMICILIO</h4>
        </div>
      </div>

      <!-- Estado Usuario -->
      <div class="estado-usuario">
        {% render 'icon-perfil-usuario' %}
        {% render 'icon-flecha-abajo' %}
      </div>
    </div>
  </header>
</sticky-header>

<script>
  class HeaderPrincipal extends HTMLElement {}
  customElements.define('sticky-header', HeaderPrincipal);
</script>
