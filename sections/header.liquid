<sticky-header>
  <header
    style="
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      z-index: 1000;
      padding: 0;
      font-family: 'League Gothic', sans-serif;
    "
  >
    <div
      style="
        display: flex;
        height: 78px;
        justify-content: space-between;
        align-items: center;
        border-radius: 8px;
        border: 1px solid #DEDEDE;
        background: #FFF;
        margin: 30px 59px 0 59px;
        padding: 10px 40px;
      "
    >
      <!-- LOGO DE PIZZA HUT -->
      <div class="logo-container">
        <a href="/">
          <img
            src="{{ 'logo-pizza-hut.png' | asset_url }}"
            alt="Pizza Hut Logo"
            style="height: 35px; width: 170px; object-fit: contain;"
          >
        </a>
      </div>

      <!-- OPCIONES -->
      <nav class="menu-options" style="display: flex; align-items: center; gap: 32px;">
        <h4
          style="
            font-family: 'League Gothic';
            font-size: 24px;
            font-style: normal;
            font-weight: 400;
            line-height: 27px;
            letter-spacing: -0.48px;
            text-transform: uppercase;
            color: #231F20;
            margin: 0;
          "
        >
          <a href="/menu" style="text-decoration: none; color: inherit;">Men√∫</a>
        </h4>

        <h4
          style="
            font-family: 'League Gothic';
            font-size: 24px;
            font-style: normal;
            font-weight: 400;
            line-height: 27px;
            letter-spacing: -0.48px;
            text-transform: uppercase;
            color: #231F20;
            margin: 0;
            display: flex;
            align-items: center;
            gap: 4px;
          "
        >
          <a
            href="/promociones"
            style="text-decoration: none; color: inherit; display: flex; align-items: center; gap: 4px;"
          >
            Hut Coins
            {% render 'icons' with 'flecha-hutcoins' %}
          </a>
        </h4>

        <h4
          style="
            font-family: 'League Gothic';
            font-size: 24px;
            font-style: normal;
            font-weight: 400;
            line-height: 27px;
            letter-spacing: -0.48px;
            text-transform: uppercase;
            color: #231F20;
            margin: 0;
          "
        >
          <a href="/restaurantes" style="text-decoration: none; color: inherit;">Sobre Nosotros</a>
        </h4>
      </nav>

      <!-- BUSCADOR -->
      <div
        class="search-container"
        style="
          position: relative;
          display: flex;
          height: 48px;
          padding: 20px;
          align-items: center;
          gap: 4px;
          align-self: stretch;
        "
      >
        {% render 'icon-search' %}
        <input
          type="search"
          placeholder="Buscar..."
          style="
            width: 100%;
            padding: 8px 12px 8px 40px;
            border-radius: 4px;
            border: 1px solid #6E6E6E;
            font-family: 'League Gothic';
            font-size: 24px;
            font-weight: 400;
            color: #231F20;
            outline: none;
          "
        >
      </div>

      <!-- CARRITO -->
      <div
        class="cart-container"
        style="
          height: 65%;
          border-right: 1.5px solid #969696;
          border-left: 1.5px solid #969696;
          padding: 0px 24px;
          display: flex;
          align-items: center;
        "
      >
        {% render 'icons' with 'cart' %}
      </div>

      <!-- MODALIDAD DE ENTREGA -->
      <div
        class="delivery-mode"
        style="
          margin: 0 20px;
          display: flex;
          flex-direction: row;
          align-items: center;
          gap: 5px;
        "
      >
        {% render 'icons' with 'domicilio' %}
        <h4
          style="
            font-family: 'League Gothic';
            font-size: 24px;
            font-style: normal;
            font-weight: 400;
            line-height: 27px;
            letter-spacing: -0.48px;
            text-transform: uppercase;
            color: #231F20;
            margin: 0;
          "
        >
          DOMICILIO
        </h4>
      </div>

      <!-- ESTADO USUARIO -->
      <div
        class="user-status"
        style="
          display: flex;
          align-items: center;
          gap: 4px;
        "
      >
        {% render 'icons' with 'perfil-usuario' %}
        {% render 'icons' with 'flecha-abajo' %}
      </div>
    </div>
  </header>
</sticky-header>
<script>
  class HeaderPrincipal extends HTMLElement {}

  customElements.define('sticky-header', HeaderPrincipal);
</script>
