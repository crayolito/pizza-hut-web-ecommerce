{% style %}
  :root {
    --fuente-principal: 'League Gothic', sans-serif;
    --fuente-secundaria: 'Montserrat', sans-serif;
    --color-primario: #231f20;
    --color-borde: #dedede;
    --color-borde-oscuro: #969696;
    --color-rojo: #c8102e;
  }

  /* Estilos base */
  h4 {
    font-family: var(--fuente-principal);
    font-size: 1.5rem;
    font-style: normal;
    font-weight: 400;
    line-height: 1.6875rem;
    letter-spacing: -0.03rem;
    text-transform: uppercase;
    margin: 0;
  }

  h3 {
    font-family: var(--fuente-principal);
    font-size: 2rem;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
    letter-spacing: -0.04rem;
    text-transform: uppercase;
    margin: 0;
  }

  h2 {
    font-family: var(--fuente-principal);
    font-size: 2.25rem;
    font-style: normal;
    line-height: normal;
    text-transform: uppercase;
    margin: 0;
  }

  p {
    font-family: var(--fuente-secundaria);
    font-size: 1rem;
    font-style: normal;
    font-weight: 400;
    line-height: 1.6875rem;
    margin: 0;
  }

  a {
    text-decoration: none;
    color: inherit;
    cursor: pointer;
  }

  input {
    font-family: var(--fuente-secundaria);
    font-size: 1rem;
    line-height: 1.6875rem;
    margin: 0;
    padding: 0;
    border: none;
    outline: none;
    background: transparent;
    width: 100%;
  }

  /* Box-sizing universal */
  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  /* Header responsivo */
  .encabezado {
    width: 100%;
    height: 90px;
    padding: 0 53px;
    background-color: #fff;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .contenedor-logo {
    height: 37px;
    width: 136px;
    flex-shrink: 0;
  }

  .logo {
    height: 100%;
    width: 100%;
    object-fit: contain;
  }

  .menu-navegacion {
    display: flex;
    align-items: center;
    gap: 29px;
    width: auto;
    margin: 0 15px;
  }

  .menu-item {
    white-space: nowrap;
  }

  .menu-hutcoins a {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .contenedor-opciones {
    display: flex;
    align-items: center;
    gap: 27px;
  }

  .contenedor-buscador {
    width: 177px;
    height: 43px;
    gap: 8px;
    display: flex;
    align-items: center;
    border-radius: 4px;
    border: 1.5px solid #6e6e6e;
    background-color: #fff;
    padding: 14px;
  }

  .contenedor-carrito {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 36px;
    padding: 0 27px;
    border-left: 1.5px solid var(--color-borde);
    border-right: 1.5px solid var(--color-borde);
  }

  .modo-entrega {
    display: flex;
    height: 36px;
    padding: 0 27px 0 0;
    gap: 0 8px;
    border-right: 1.5px solid var(--color-borde);
    flex-direction: column;
    align-items: flex-start;
    justify-content: center;
  }

  .texto-entrega-titulo {
    text-transform: uppercase;
    font-weight: 600;
  }

  .contenedor-metodo {
    display: flex;
    align-items: center;
    gap: 4px;
    white-space: nowrap;
  }

  .boton-login {
    border-radius: 4px;
    background: var(--color-rojo);
    gap: 8px;
    padding: 8px 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 36px;
    border: none;
    cursor: pointer;
  }

  .texto-login {
    color: #fff;
    white-space: nowrap;
  }

  /* Media queries para adaptación responsiva */
  @media screen and (max-width: 1200px) {
    .encabezado {
      padding: 0 30px;
    }

    .menu-navegacion {
      gap: 20px;
    }

    .contenedor-opciones {
      gap: 15px;
    }

    .contenedor-buscador {
      width: 150px;
    }

    .contenedor-carrito {
      padding: 0 20px;
    }

    .modo-entrega {
      padding: 0 20px 0 0;
    }
  }

  @media screen and (max-width: 992px) {
    .encabezado {
      padding: 0 20px;
    }

    .menu-navegacion {
      gap: 15px;
    }

    .contenedor-opciones {
      gap: 10px;
    }

    .contenedor-buscador {
      width: 120px;
    }

    .contenedor-carrito {
      padding: 0 15px;
    }

    .modo-entrega {
      padding: 0 15px 0 0;
    }

    h4 {
      font-size: 1.3rem;
    }
  }

  @media screen and (max-width: 768px) {
    .encabezado {
      padding: 0 15px;
    }

    .menu-navegacion {
      gap: 10px;
    }

    .contenedor-opciones {
      gap: 8px;
    }

    .contenedor-buscador {
      width: 100px;
      padding: 8px;
    }

    .contenedor-carrito {
      padding: 0 10px;
    }

    .modo-entrega {
      padding: 0 10px 0 0;
    }

    h4 {
      font-size: 1.2rem;
    }

    .texto-entrega-titulo {
      display: none;
    }
  }

  /* Diseño específico para móviles - se debe crear por separado */
  @media screen and (max-width: 640px) {
    /* Aquí iría el código para el diseño móvil */
  }
{% endstyle %}

<sticky-header>
  <header class="encabezado">
    <div class="contenedor-logo">
      <img class="logo" src="{{ 'logo-pizza-hut.png' | asset_url }}" alt="Logo Pizza Hut">
    </div>

    <nav class="menu-navegacion">
      <div class="menu-item">
        <a href="/menu">
          <h4>Menú</h4>
        </a>
      </div>
      <div class="menu-item menu-hutcoins">
        <a href="/promociones">
          <h4>Hut Coins</h4>
          {% render 'icon-flecha-hutcoins' %}
        </a>
      </div>
      <div class="menu-item">
        <a href="/restaurantes">
          <h4>Sobre Nosotros</h4>
        </a>
      </div>
    </nav>

    <div class="contenedor-opciones">
      <div class="contenedor-buscador">
        {% render 'icon-search', class: 'icono-buscar' %}
        <input type="search" class="campo-busqueda" placeholder="Buscar...">
      </div>

      <div class="contenedor-carrito">
        {% render 'icon-carrito' %}
      </div>

      <div class="modo-entrega">
        <p class="texto-entrega-titulo">Selecciona tu</p>
        <div class="contenedor-metodo">
          <h4 class="texto-metodo">Método de entrega</h4>
          {% render 'icon-domicilio', class: 'icono-domicilio' %}
        </div>
      </div>

      <button class="boton-login">
        <h4 class="texto-login">Iniciar sesión</h4>
        {% render 'icon-search', class: 'icono-login' %}
      </button>
    </div>
  </header>
</sticky-header>

<script>
  class HeaderPrincipal extends HTMLElement {}
  customElements.define('sticky-header', HeaderPrincipal);
</script>
