{% style %}
  :root {
    --fuente-principal: 'League Gothic', sans-serif;
    --fuente-secundaria: 'Montserrat', sans-serif;
    --color-primario: #231f20;
    --color-borde: #dedede;
    --color-borde-oscuro: #969696;
  }

  /* Base styles (mobile first) */
  .encabezado {
    width: 100%;
    height: 4rem; /* Más pequeño para móviles */
    padding: 0 1rem;
    background-color: #fff;
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: relative;
    z-index: 100;
  }

  .contenedor-logo {
    height: 4rem;
    width: 6rem;
  }

  .logo {
    height: 100%;
    width: 100%;
    object-fit: contain;
  }

  .menu-navegacion {
    display: flex;
    align-items: center;
    gap: 1rem;
    width: auto;
  }

  .hut-coins {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .contenedor-buscador {
    width: 8rem;
    height: 2rem;
    gap: 0.25rem;
    display: flex;
    align-items: center;
    border-radius: 0.25rem;
    border: 0.094rem solid #6e6e6e;
    background-color: #fff;
    padding: 0.5rem;
    font-size: 0.875rem;
  }

  /* Móviles pequeños (hasta 320px) */
  @media screen and (max-width: 320px) {
    .encabezado {
      height: 3.5rem; /* 56px */
      padding: 0 0.75rem; /* 12px */
    }

    .contenedor-logo {
      height: 3.5rem;
      width: 5rem; /* 80px */
    }

    .menu-navegacion {
      gap: 0.5rem; /* 8px */
    }

    .contenedor-buscador {
      width: 6.25rem; /* 100px */
      height: 1.75rem; /* 28px */
      padding: 0.375rem; /* 6px */
      font-size: 0.75rem; /* 12px */
    }
  }

  /* Móviles medianos (321px - 375px) */
  @media screen and (min-width: 321px) and (max-width: 375px) {
    .encabezado {
      height: 3.75rem; /* 60px */
      padding: 0 0.875rem; /* 14px */
    }

    .contenedor-logo {
      height: 3.75rem;
      width: 5.5rem; /* 88px */
    }

    .contenedor-buscador {
      width: 7rem; /* 112px */
    }
  }

  /* Móviles grandes (376px - 480px) */
  @media screen and (min-width: 376px) and (max-width: 480px) {
    .encabezado {
      height: 4rem; /* 64px */
      padding: 0 1rem; /* 16px */
    }

    .contenedor-logo {
      height: 4rem;
      width: 6rem; /* 96px */
    }
  }

  /* Móviles en horizontal y tablets pequeñas (481px - 767px) */
  @media screen and (min-width: 481px) and (max-width: 767px) {
    .encabezado {
      height: 4.5rem; /* 72px */
      padding: 0 1.5rem; /* 24px */
    }

    .contenedor-logo {
      height: 4.5rem;
      width: 7rem; /* 112px */
    }

    .menu-navegacion {
      gap: 1.25rem; /* 20px */
    }

    .contenedor-buscador {
      width: 9rem; /* 144px */
      height: 2.25rem; /* 36px */
      font-size: 0.9375rem; /* 15px */
    }
  }

  /* Tablets (768px - 991px) */
  @media screen and (min-width: 768px) and (max-width: 991px) {
    .encabezado {
      height: 5rem; /* 80px */
      padding: 0 2rem; /* 32px */
    }

    .contenedor-logo {
      height: 5rem;
      width: 7.5rem; /* 120px */
    }

    .menu-navegacion {
      gap: 1.5rem; /* 24px */
    }

    .contenedor-buscador {
      width: 10rem; /* 160px */
      height: 2.5rem; /* 40px */
      padding: 0.75rem; /* 12px */
      font-size: 1rem; /* 16px */
    }
  }

  /* Tablets grandes y laptops pequeñas (992px - 1199px) */
  @media screen and (min-width: 992px) and (max-width: 1199px) {
    .encabezado {
      height: 5.25rem; /* 84px */
      padding: 0 2.5rem; /* 40px */
    }

    .contenedor-logo {
      height: 5.25rem;
      width: 8rem; /* 128px */
    }

    .menu-navegacion {
      gap: 1.75rem; /* 28px */
    }

    .contenedor-buscador {
      width: 10.5rem; /* 168px */
    }
  }

  /* Desktops y laptops (1200px - 1439px) */
  @media screen and (min-width: 1200px) and (max-width: 1439px) {
    .encabezado {
      height: 5.5rem; /* 88px - tu medida original */
      padding: 0 3rem; /* 48px - tu medida original */
    }

    .contenedor-logo {
      height: 5.5rem;
      width: 8.5rem; /* 136px - tu medida original */
    }

    .menu-navegacion {
      gap: 2rem; /* 32px - tu medida original */
    }

    .contenedor-buscador {
      width: 11.06rem; /* 177px - tu medida original */
      height: 2.69rem; /* 43px - tu medida original */
      padding: 0.88rem; /* 14px - tu medida original */
    }
  }

  /* Pantallas grandes (1440px en adelante) */
  @media screen and (min-width: 1440px) {
    .encabezado {
      height: 6rem; /* 96px */
      padding: 0 4rem; /* 64px */
    }

    .contenedor-logo {
      height: 6rem;
      width: 9.5rem; /* 152px */
    }

    .menu-navegacion {
      gap: 2.5rem; /* 40px */
    }

    .contenedor-buscador {
      width: 12.5rem; /* 200px */
      height: 3rem; /* 48px */
      padding: 1rem; /* 16px */
      font-size: 1.125rem; /* 18px */
    }
  }
{% endstyle %}

<sticky-header>
  <header class="encabezado">
    <div class="contenedor-logo">
      <img
        src="{{ 'logo-pizza-hut.png' | asset_url }}"
        alt="Logo Pizza Hut"
        class="logo"
      >
    </div>

    <nav
      class="menu-navegacion"
    >
      <div class="menu-item">
        <a href="/menu">
          <h4>Menú</h4>
        </a>
      </div>
      <div class="menu-item menu-hutcoins">
        <a
          class="hut-coins"
          href="/promociones"
        >
          <h4>Hut Coins</h4>
          {% render 'icon-flecha-hutcoins' %}
        </a>
      </div>
      <div class="menu-item">
        <a href="/restaurantes">
          <h4>Sobre Nosotros</h4>
        </a>
      </div>
    </nav>

    <div
      style="
        display: flex;
        align-items: center;
        gap: 27px;
      "
      class="contenedor-opciones"
    >
      <div class="contenedor-buscador">
        {% render 'icon-search', class: 'icono-buscar' %}
        <input type="search" class="campo-busqueda" placeholder="Buscar...">
      </div>

      <div
        style="display:flex; align-items: center; justify-content: center; height: 36px;padding: 0px 27px; border-left: 1.5px solid #DEDEDE; border-right: 1.5px solid #DEDEDE;"
        class="contenedor-carrito"
      >
        {% render 'icon-carrito' %}
      </div>

      <div
        style="
          display: flex;
          height: 36px;
          padding: 0px 27px 0px 0px;
          gap: 0px 8px;
          border-right: 1.5px solid #DEDEDE;
          flex-direction: column;
          align-items: start;
          justify-content: center;
        "
        class="modo-entrega"
      >
        <p
          style="
            text-transform: uppercase;
            font-weight: 600;
          "
          class="texto-entrega-titulo"
        >
          Selecciona tu
        </p>
        <div
          style="
            display: flex;
            align-items: center;
            gap: 4px;
          "
          class="contenedor-metodo"
        >
          <h4 class="texto-metodo">Método de entrega</h4>
          {% render 'icon-domicilio', class: 'icono-domicilio' %}
        </div>
      </div>

      <button
        style="
          border-radius: 4px;
          background: #C8102E;
          gap: 8px;
          padding: 8px 16px;
          display: flex;
          align-items: center;
          justify-content: center;
          height: 36px;
        "
        class="boton-login"
      >
        <h4
          style="color: #FFF;"
          class="texto-login"
        >
          Iniciar sesión
        </h4>
        {% render 'icon-search', class: 'icono-login' %}
      </button>
    </div>
  </header>
</sticky-header>

<script>
  class HeaderPrincipal extends HTMLElement {}
  customElements.define('sticky-header', HeaderPrincipal);
</script>
