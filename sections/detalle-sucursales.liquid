<div
  style="
    width: 100%;
    padding: 0px 3.125rem;
    height: 61.25rem;
    margin: 1.94rem 0rem;
  "
  class="ds-contenedor-base"
>
  <div
    style="
      position: relative;
      width: 50%;
      height: 100%;
      padding: 12.81rem 5.44rem;
      border-radius: 0.5rem;
      background: linear-gradient(0deg, rgba(255, 255, 255, 0.20) 0%, rgba(255, 255, 255, 0.20) 100%), url(<path-to-image>) lightgray -408.12px -188.638px / 327.677% 143.673% no-repeat;
    "
    class="ds-contenedor-left"
  >
    <img
      src="{{ 'image-sucursales-aux.png' | asset_url }}"
      style="
        width: 27.5625rem;
        height: 18.5625rem;
        position: absolute;
        bottom: 0;
        left: 0;
      "
    >
    <div
      style="
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        gap:  3rem;
      "
      class="ds-informacion-seleccion"
    >
      <p
        style="
           color: #231F20;
          font-family: var(--fuente-principal);
          font-size: 4.375rem;
          font-style: normal;
          font-weight: 400;
          line-height: 100%;
          letter-spacing: -0.0875rem;
          text-transform: uppercase;
        "
      >
        Encuentra tu sucursal m√°s cercana
      </p>
      <div class="ds-tipo-ciudad">
        <h3 style="color: #C8102E">Selecciona tu ciudad</h3>
        <div
          style="
            display: flex;
            padding-bottom: 0.625rem;
            align-items: center;
            gap: 0.625rem;
            align-self: stretch;
            cursor: pointer;
            border-bottom: 1px solid #231F20;
          "
          class="ds-select-ciudad"
        >
          <h3 style="color: #231F20">Santa Cruz</h3>
          {% render 'icon-flecha-abajo' %}
        </div>
      </div>
      <div class="ds-metodo-entrega">
        <h3 style="color: #C8102E">Selecciona tu ciudad</h3>
        <div
          style="
            display: flex;
            padding-bottom: 0.625rem;
            align-items: center;
            gap: 0.625rem;
            align-self: stretch;
            cursor: pointer;
            border-bottom: 1px solid #231F20;
          "
          class="ds-select-ciudad"
        >
          <h3 style="color: #231F20">Delivery</h3>
          {% render 'icon-flecha-abajo' %}
        </div>
      </div>
    </div>
  </div>
  <div
    style="
      width: 50%;
      height: 100%;
    "
    class="ds-contenedor-right"
  ></div>
</div>

