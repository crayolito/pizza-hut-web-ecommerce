        <h3 class="titulo-producto">SUPREME</h3>
        <p class="texto-producto">
          Salsa de tomate, queso mozzarella, Pepperoni, Jamón, carnes mixtas res y cerdo, salchicha italiana y tocino.
        </p>
      </div>
      <div class="input-producto">
        <p class="label-tamano">Tamaño</p>
        <div class="selector-tamano">
          <p class="texto-tamano">Mediana</p>
          {% render 'icon-flecha-abajo' %}
        </div>
      </div>
      <div class="proceso-compra">
        <p class="texto-compra">90 Bs • Continuar</p>
      </div>
    </div>

    <!-- Producto 3: Jamón -->
    <div class="item-producto">
      <div class="imagen-producto">
        <img src="{{ 'imagen-pizza-3.png' | asset_url }}" alt="Pizza Jamón">
      </div>
      <div class="descripcion-producto">
        <h3 class="titulo-producto">JAMÓN</h3>
        <p class="texto-producto">Salsa de tomate, queso mozzarella y Jamón</p>
      </div>
      <div class="input-producto">
        <p class="label-tamano">Tamaño</p>
        <div class="selector-tamano">
          <p class="texto-tamano">Mediana</p>
          {% render 'icon-flecha-abajo' %}
        </div>
      </div>
      <div class="proceso-compra">
        <p class="texto-compra">90 Bs • Continuar</p>
