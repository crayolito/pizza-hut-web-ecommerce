<!-- productos-index.liquid -->
<div class="contenedor-base">
  <div class="contenedor-header">
    <span class="texto-principal">TU PIZZA FAVORITA</span>
    <span class="texto-destacado">¡Te espera!</span>
  </div>

  <div class="contenedor-body">
    <!-- Producto 1: Pepperoni -->
    <div class="item-producto">
      <div class="imagen-producto">
        <img src="{{ 'imagen-pizza-1.png' | asset_url }}" alt="Pizza Pepperoni">
      </div>
      <div class="descripcion-producto">
        <h3 class="titulo-producto">PEPPERONI</h3>
        <p class="texto-producto">Salsa de tomate, queso mozzarella, y Pepperoni</p>
      </div>
      <div class="input-producto">
        <p class="label-tamano">Tamaño</p>
        <div class="selector-tamano">
          <p class="texto-tamano">Mediana</p>
          {% render 'icon-flecha-abajo' %}
        </div>
      </div>
      <div class="proceso-compra">
        <p class="texto-compra">90 Bs • Continuar</p>
      </div>
    </div>

    <!-- Producto 2: Supreme -->
