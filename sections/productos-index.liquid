</div>

{% style %}
  /* Contenedor base */
  .contenedor-base {
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    flex: 1 0 0;
    align-self: stretch;
    color: var(--color-primario, #231f20);
    padding: 0 3.125rem;
    margin-top: 4rem;
    gap: 1rem;
  }

  /* Encabezado */
  .contenedor-header {
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    font-family: var(--fuente-principal);
    text-transform: uppercase;
    gap: 0.5rem;
  }

  .texto-principal {
    font-size: 4.375rem;
    font-style: normal;
    font-weight: 400;
    line-height: 100%;
    letter-spacing: -0.0875rem;
  }

  .texto-destacado {
    color: #c8102e;
    font-size: 4.375rem;
    font-style: normal;
    font-weight: 400;
    line-height: 100%;
    letter-spacing: -0.0875rem;
  }

  /* Contenedor de productos */
  .contenedor-body {
    display: flex;
    justify-content: space-between;
    align-items: center;
    align-self: stretch;
    gap: 1rem;
    font-family: var(--fuente-principal);
  }

  /* Producto individual */
  .item-producto {
    display: flex;
    justify-content: space-between;
    flex-direction: column;
    align-items: center;
    align-self: stretch;
    width: 19.375rem;
    height: 37.25rem;
  }

  /* Imagen del producto */
  .imagen-producto {
    height: 16.875rem;
    width: 100%;
  }

  .imagen-producto img {
    height: 100%;
    width: 100%;
    object-fit: contain;
  }

  /* Información del producto */
  .descripcion-producto {
    display: flex;
    flex-direction: column;
    justify-content: start;
    align-items: flex-start;
    gap: 0.75rem;
    align-self: stretch;
    width: 100%;
    height: 10rem;
  }

  .titulo-producto {
    color: #231f20;
    font-size: 2rem;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
    letter-spacing: -0.04rem;
    text-transform: uppercase;
    margin: 0;
    padding: 0;
  }

  .texto-producto {
    color: #231f20;
    font-family: Montserrat;
    font-size: 1rem;
    font-style: normal;
    font-weight: 400;
    line-height: 1.5rem;
    margin: 0;
    padding: 0;
  }

  /* Selector de tamaño */
  .input-producto {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    gap: 0.25rem;
    align-self: stretch;
    width: 100%;
  }

  .label-tamano {
    color: #231f20;
    font-family: Montserrat;
    font-size: 1rem;
    font-style: normal;
    font-weight: 600;
    line-height: normal;
    margin: 0;
    padding: 0;
  }

  .selector-tamano {
    display: flex;
    height: 3rem;
    padding: 1.25rem;
    justify-content: space-between;
    align-items: center;
    align-self: stretch;
    border-radius: 0.25rem;
    border: 1px solid #353535;
    background: #fff;
    width: 100%;
  }

  .texto-tamano {
    color: #231f20;
    font-family: Montserrat;
    font-size: 1rem;
    font-style: normal;
    font-weight: 400;
    line-height: 1.5rem;
    margin: 0;
    padding: 0;
  }

  /* Botón de compra */
  .proceso-compra {
    display: flex;
    height: 3rem;
    padding: 1.25rem;
    justify-content: center;
    align-items: center;
    gap: 0.25rem;
    flex-shrink: 0;
    align-self: stretch;
    border-radius: 0.25rem;
    background: #c8102e;
    width: 100%;
  }

  .texto-compra {
    font-family: Montserrat;
    color: #fff;
    font-size: 1rem;
    font-style: normal;
    font-weight: 600;
    line-height: normal;
    letter-spacing: -0.04rem;
    text-transform: uppercase;
    margin: 0;
    padding: 0;
  }
{% endstyle %}

