    connectedCallback() {
      // REFERENCIAS ELEMENTOS
      {% comment %} this.primeraFaseConsulta(); {% endcomment %}
      this.traerInformacionShopify();
      document.addEventListener('click', this.clicksEspeciales.bind(this));
