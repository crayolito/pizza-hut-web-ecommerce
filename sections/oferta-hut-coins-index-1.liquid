<section
  style="cursor: pointer;"
  id="phohci-contenedor-base"
  class="container-base  ohci-contenedor-base"
>
  <a
    class="ohci-contenedor-imagen"
  >
    <img src="{{ 'banner-Hutcoins.png' | asset_url }}" width="100%" height="100%">
  </a>
</section>

<style>
  .ohci-contenedor-base {
    width: 100%;
    padding: var(--espaciado-xl) var(--espaciado-xxl);
  }

  .ohci-contenedor-imagen {
    width: 100%;
    border-radius: var(--border-radius-1);
  }

  .ohci-contenedor-imagen img {
    width: 100%;
    height: 100%;

    object-fit: contain;
    border-radius: var(--border-radius-1);
  }
</style>

<script>
  const contenedorImagen = document.querySelector('#phohci-contenedor-base');

  // Al hacer clic en el contenedor, navegar a la URLL
  contenedorImagen.addEventListener('click', (e) => {
    window.open('https://microsites.spnty.co/pizzahutbolivia/login', '_blank');
  });
</script>

