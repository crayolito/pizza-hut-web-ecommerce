  function enableHorizontalScroll() {
    // Selecciona todos los elementos que tienen overflow-x: auto o scroll
    const scrollableElements = Array.from(document.querySelectorAll('*')).filter(el => {
      const style = window.getComputedStyle(el);
      return (style.overflowX === 'auto' || style.overflowX === 'scroll') &&
             el.scrollWidth > el.clientWidth; // Solo si tiene contenido que puede hacer scroll
    });

    // Añade event listener a cada elemento
    scrollableElements.forEach(element => {
      element.addEventListener('wheel', function(event) {
        // Solo previene el comportamiento predeterminado si el cursor está sobre este elemento
        if (isMouseOver(event, this)) {
