  <script>
    // Variable global para almacenar la ubicación del cliente
    let ubicacionCliente = { lat: -17.783315017953004, lng: -63.18214577296119 };
    let map;
    let marker;

    // Función para inicializar el mapa
    function inicializarMapa() {
      // Elemento donde se mostrará el mapa
      const mapElement = document.querySelector('.p-sme-mapa');

      // Opciones del mapa
      const mapOptions = {
        center: ubicacionCliente,
        zoom: 15,
        mapTypeControl: false,
        streetViewControl: false,
        fullscreenControl: false,
      };

      // Crear el mapa
      map = new google.maps.Map(mapElement, mapOptions);

      // Crear el marcador
      marker = new google.maps.Marker({
        position: ubicacionCliente,
        map: map,
        draggable: true,
        animation: google.maps.Animation.DROP,
        title: 'Tu ubicación',
      });

      // Actualizar ubicación cuando se arrastra el marcador
      google.maps.event.addListener(marker, 'dragend', function () {
        ubicacionCliente = {
          lat: marker.getPosition().lat(),
          lng: marker.getPosition().lng(),
        };
        console.log('Nueva ubicación:', ubicacionCliente);
      });

      // Permitir hacer clic en el mapa para mover el marcador
      google.maps.event.addListener(map, 'click', function (event) {
        marker.setPosition(event.latLng);
        ubicacionCliente = {
          lat: event.latLng.lat(),
          lng: event.latLng.lng(),
        };
        console.log('Nueva ubicación:', ubicacionCliente);
      });
    }

    // Función para solicitar la ubicación del usuario
    function solicitarUbicacion() {
      if (navigator.geolocation) {
        navigator.geolocation.getCurrentPosition(
          // Éxito
          function (position) {
            ubicacionCliente = {
              lat: position.coords.latitude,
              lng: position.coords.longitude,
            };
            console.log('Ubicación obtenida:', ubicacionCliente);

            // Actualizar el mapa con la nueva ubicación
            if (map && marker) {
              map.setCenter(ubicacionCliente);
              marker.setPosition(ubicacionCliente);
            }
          },
          // Error
          function (error) {
            console.error('Error al obtener la ubicación:', error);
            // Usar ubicación predeterminada
            alert(
              'No se pudo obtener tu ubicación. Utilizaremos una ubicación predeterminada. Por favor, ajusta el pin en el mapa.'
            );
          },
          // Opciones
          {
            enableHighAccuracy: true,
            timeout: 5000,
            maximumAge: 0,
          }
        );
      } else {
        console.error('Geolocalización no soportada por este navegador');
        alert('Tu navegador no soporta geolocalización. Por favor, ajusta manualmente el pin en el mapa.');
      }
    }

    // Función para abrir el modal
    function abrirModal() {
      const modal = document.querySelector('.p-sme-modal-mapa-envio-domicilio');
      modal.style.display = 'flex';

      // Inicializar el mapa después de que el modal esté visible
      setTimeout(function () {
        inicializarMapa();
      }, 100);
    }

    // Función para cerrar el modal
    function cerrarModal() {
      const modal = document.querySelector('.p-sme-modal-mapa-envio-domicilio');
      modal.style.display = 'none';
    }

    // Función para confirmar la dirección
    function confirmarDireccion() {
      console.log('Ubicación confirmada:', ubicacionCliente);

      // Aquí puedes agregar código para guardar la ubicación en un campo oculto del formulario
      // o realizar otras acciones con la ubicación confirmada

      // Cerrar el modal
      cerrarModal();

      // Mostrar mensaje de confirmación
      alert('Dirección confirmada correctamente');
    }

    // Inicializar cuando el DOM esté cargado
    document.addEventListener('DOMContentLoaded', function () {
      // Configurar el modal para que esté oculto inicialmente
      const modal = document.querySelector('.p-sme-modal-mapa-envio-domicilio');
      modal.style.display = 'none';

      // Configurar el contenedor del mapa
      const mapContainer = document.querySelector('.p-sme-mapa');
      if (mapContainer) {
        mapContainer.style.width = '100%';
        mapContainer.style.height = '70vh';
        mapContainer.style.backgroundColor = '#f0f0f0';
      }

      // Configurar eventos de los botones
      const botonCerrar = document.querySelector('.p-sme-boton-cerrar');
      if (botonCerrar) {
        botonCerrar.addEventListener('click', cerrarModal);
        botonCerrar.style.cursor = 'pointer';
      }

      const botonConfirmar = document.querySelector('.p-sme-boton-confirmar');
      if (botonConfirmar) {
        botonConfirmar.addEventListener('click', confirmarDireccion);
        botonConfirmar.style.cursor = 'pointer';
      }

      const iconoCerrar = document.querySelector('.p-sme-modal-header svg');
      if (iconoCerrar) {
        iconoCerrar.addEventListener('click', cerrarModal);
        iconoCerrar.style.cursor = 'pointer';
      }

      // Solicitar ubicación y abrir el modal automáticamente al cargar la página
      setTimeout(function () {
        solicitarUbicacion();
        abrirModal();
      }, 1000);
    });

    // Asegurarse de que el mapa se redimensione correctamente cuando cambia el tamaño de la ventana
    window.addEventListener('resize', function () {
      if (map) {
        google.maps.event.trigger(map, 'resize');
        map.setCenter(ubicacionCliente);
      }
    });
  </script>
