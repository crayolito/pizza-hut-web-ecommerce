      rel="stylesheet"
    >

    {%- if settings.favicon != blank -%}
      <link rel="icon" type="logo-sauce-only-1.png" href="{{ settings.favicon | image_url: width: 32, height: 32 }}">
    {%- endif -%}

    {%- unless settings.type_header_font.system? and settings.type_body_font.system? -%}
      <link rel="preconnect" href="https://fonts.shopifycdn.com" crossorigin>
    {%- endunless -%}

    <title>
      {{ page_title }}
      {%- if current_tags %} &ndash; tagged "{{ current_tags | join: ', ' }}"{% endif -%}
      {%- if current_page != 1 %} &ndash; Page {{ current_page }}{% endif -%}
      {%- unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless -%}
    </title>

    {{ content_for_header }}

    {% style %}
      :root {
        --fuente-primary: 'League Gothic', sans-serif;
        --fuente-secondary: 'Montserrat', sans-serif;
        /* Colores Primarios */
        --colorp-primary: #c8102e;
        --colorp-secondary: #ffffff;
        --colorp-tertiary: #231f20;
        /* Colores Acento */
        --colora-primary: #e6b991;
        --colora-secondary: #a50a23;
        --colora-tertiary: #231f20;

        /* Colores de bordes */
        --colorb-primary: #969696;

        /* Tamaños de fuente responsivos con clamp() */
        --font-size-h1: clamp(2.5rem, 5vw, 3rem);
        --font-size-h2: clamp(2rem, 4vw, 2.25rem);
        --font-size-h3: clamp(1.5rem, 3.5vw, 2rem);
        --font-size-h4: clamp(1.25rem, 3vw, 1.5rem);
        --font-size-p: clamp(0.875rem, 2vw, 1rem);

        /* Letter spacing responsivo asasd*/
        --letter-spacing-h1: clamp(-0.05rem, -0.1vw, -0.06rem);
        --letter-spacing-h2: clamp(-0.04rem, -0.09vw, -0.045rem);
        --letter-spacing-h3: clamp(-0.03rem, -0.08vw, -0.04rem);
        --letter-spacing-h4: clamp(-0.025rem, -0.07vw, -0.03rem);

        /* Sistema de espaciado */
        --espaciado-xs: 0.25rem;
        --espaciado-s: 0.5rem;
        --espaciado-m: 0.75rem;
        --espaciado-l: 1rem;
        --espaciado-xl: 1.25rem;
        --espaciado-xxl: 1.5rem;
        --espaciado-xxxl: 3rem;
        --espaciado-big: 4rem;

        /* Bordes Radius */
        --border-radius-1: 0.25rem;
        --border-radius-2: 0.5rem;
        --border-radius-3: 0.625rem;
        --border-radius-4: 6.25rem;
      }

      *,
      *::before,
      *::after {
        box-sizing: inherit;
      }

      html {
        width: 100%;
        height: 100%;
        box-sizing: border-box;
        font-family: var(--fuente-primary);
        font-size: 16px;
        scroll-behavior: smooth;
      }

      body {
        width: 100%;
        height: 100%;
        margin: 0;
        overflow-x: hidden;
        color: var(--text-color);
      }

      h1 {
        margin: 0;
        font-family: var(--fuente-primary);
        font-size: var(--font-size-h1);
        font-style: normal;
        font-weight: 400;
        line-height: 100%;
        letter-spacing: var(--letter-spacing-h1);
        text-transform: uppercase;
      }

      h2 {
        margin: 0;
        font-family: var(--fuente-primary);
        font-size: var(--font-size-h2);
        font-style: normal;
        font-weight: 400;
        line-height: normal;
        letter-spacing: var(--letter-spacing-h2);
        text-transform: uppercase;
      }

      h3 {
        margin: 0;
        font-family: var(--fuente-primary);
        font-size: var(--font-size-h3);
        font-style: normal;
        font-weight: 400;
        line-height: normal;
        letter-spacing: var(--letter-spacing-h3);
        text-transform: uppercase;
      }

      h4 {
        margin: 0;
        font-family: var(--fuente-primary);
        font-size: var(--font-size-h4);
        font-style: normal;
        font-weight: 400;
        line-height: normal;
        letter-spacing: var(--letter-spacing-h4);
        text-transform: uppercase;
      }

      p {
        margin: 0;
        font-family: Montserrat, sans-serif;
        font-size: var(--font-size-p);
        font-style: normal;
        font-weight: 400;
        line-height: normal;
      }

      li,
      ul,
      ol {
        margin: 0;
      }

      input {
        font-family: var(--fuente-secondary);
        font-size: var(--font-size-p);
        font-style: normal;
        font-weight: 400;
        line-height: normal;
        width: 100%;
        border: 0;
      }

      input:focus {
        outline: none;
      }

      button {
        cursor: pointer;
        background: transparent;
        border: none;
        padding: 0;
        margin: 0;
      }

      a {
        text-decoration: none;
        color: inherit;
      }

      img {
        max-width: 100%;
        height: auto;
      }

      svg {
        width: 1.5rem;
        height: 1.5rem;
        flex-shrink: 0;
        flex-grow: 0;
      }

      hr {
        background-color: #dedede;
        margin: 0;
        padding: 0;
        border: none;
      }

      /* ===================
         ESTILOS GENERALES
      =================== */

      /* Contenedor base para componentes (sections)  */
      .container-base {
        width: 100%;
        max-width: 1660px;
        margin: auto;
        padding-left: var(--espaciado-xl) !important;
        padding-right: var(--espaciado-xl) !important;
      }

      .container-secundario {
        width: 100%;
        max-width: 1660px;
        margin: auto;
      }

      [class*='icon-color-primary'] svg {
        filter: invert(15%) sepia(95%) saturate(6932%) hue-rotate(343deg) brightness(91%) contrast(97%);
        /* filter: invert(15%) sepia(95%) saturate(6932%) hue-rotate(350deg) brightness(91%) contrast(113%); */
        fill: var(--colorp-primary);
      }

      [class*='icon-color-secondary'] svg {
        filter: invert(100%) sepia(0%) saturate(0%) hue-rotate(93deg) brightness(103%) contrast(103%);
        fill: var(--colorp-secondary);
      }

      [class*='icon-color-tertiary'] svg {
        /* filter: invert(8%) sepia(9%) saturate(555%) hue-rotate(314deg) brightness(94%) contrast(91%); */
        filter: brightness(0) saturate(100%) invert(8%) sepia(9%) saturate(535%) hue-rotate(314deg) brightness(94%)
          contrast(91%);
        fill: var(--colorp-tertiary);
      }

      .color-letras-primary {
        color: var(--colorp-primary);
      }

      .color-letras-secondary {
        color: var(--colorp-secondary);
      }

      .color-letras-tertiary {
        color: var(--colorp-tertiary);
      }

      @media screen and (min-width: 768px) {
        .container-base {
          padding-left: var(--espaciado-xxxl) !important;
          padding-right: var(--espaciado-xxxl) !important;
        }
      }

      @media screen and (min-width: 1024px) {
        .container-base {
          padding-left: var(--espaciado-big) !important;
          padding-right: var(--espaciado-big) !important;
        }
      }

      @media screen and (min-width: 350px) and (max-width: 380px) {
        html {
          font-size: 13px;
        }
      }

      @media screen and (min-width: 800px) and (max-width: 960px) {
        html {
          font-size: 14.5px;
        }
      }

      @media screen and (min-width: 1440px) {
        html {
          font-size: 17.5px;
        }
      }

      /* ESTILOS GENERALES /*
       Docuemntacion para el uso de clamps With Height Sections Divs(Header, Footer, Font-size, etc):
       clamp(min, preferred, max)
       clamp(valor minimo,(y+c),valor maximo)
       x : unidad vh o vw
       y : unidad px

       min: valor mínimo para el tamaño de la pantalla
       preferred: valor preferido para el tamaño de la pantalla
       max: valor máximo para el tamaño de la pantalla

       Proceso
       1. Primero se tiene el valor base
       2. Se calcula el valor mínimo : valor base * 0.7
       3. Se calcula el valor máximo : valor base * 1.3
       4. Sacar el valor (x) ,  x : (valor base  ÷ tamaño de la pantalla ) * 100
       5. Sacar el valor (y) , y :

       Ejemplo : height: clamp(63px, 10vh + 35px, 117px)
       valor base : 90px
       tamaño de la pantalla en el alto : 551.33px
       tamaño de la pantalla en el ancho : 551.33px

       valor minimo : 63px
       valor maximo : 117px
       valor x : (90 ÷ 551.33) * 100 = 16.33vh
       valor y : x * 0.6 = 9.8vh = 10vh = 10% = 0.1
       valor b : 551.33px * y = 55.13px
       valor c : 90px - b = 34.87px = 35px

       Docuemntacion para el uso de clamps Margin, Padding Gap Iconos:
       clamp(min, x, max)
       x : (valor base ÷ tamaño de la pantalla) * 100
       */
    {% endstyle %}
  </head>

  <body>
    {% sections 'header-group' %}

    <main style="margin-top: 6.1rem;">
      {{ content_for_layout }}
    </main>

    {% sections 'footer-group' %}

    <!-- MODAL CLIENTE : ESTADO LOGUEADO -->
    <div class="modal-general-sme">
      <div class="modal-principal-solicitud-metodo-entrega">
        <div class="mpsme-icono-base icon-color-primary">
          {% render 'icon-localizacion-plus' %}
        </div>
        <div class="mpsme-mensaje-base">
          <small>¿cómo quieres recibir tu pizza?</small>
          <p>
            Elige si la llevamos hasta la puerta de tu casa o si prefieres recogerla tú mismo desde nuestro local más
            cercano.
          </p>
        </div>
        <div class="mpsme-seleccion-entrega">
          <div class="mpsme-metodo-entrega mpsme-metodo-recoger-local">
            <div class="mpsme-icono-seleccion">
              {% render 'icon-estado-off' %}
            </div>
            <div class="mpsme-informacion-metodo">
              <div class="mpsme-icono-metodo icon-color-primary">
                {% render 'icon-recogo-local' %}
              </div>
              <div class="mpsme-informacion-metodo-texto">
                <p style="font-weight: 600;">Recoger en local</p>
                <p>Sin costo alguno</p>
              </div>
            </div>
          </div>
          <div class="mpsme-metodo-entrega mpsme-metodo-envio-domicilio seleccionado">
            <div class="mpsme-icono-seleccion">
              {% render 'icon-estado-on' %}
            </div>
            <div class="mpsme-informacion-metodo">
              <div class="mpsme-icono-metodo seleccionado ">
                {% render 'icon-recogo-delivery' %}
              </div>
              <div class="mpsme-informacion-metodo-texto">
                <p style="font-weight: 600;">Envío a domicilio</p>
                <p>Envío a solo Bs 2</p>
              </div>

              {% comment %} asd {% endcomment %}
            </div>
          </div>
        </div>
        <div class="mpsme-opciones-entrega">
          <button class="mpsme-opcion-continuar">
            <p class="color-letras-secondary">Continuar</p>
          </button>
          <button class="mpsme-opcion-omitir icon-color-primary">
            <p class="color-letras-primary">Omitir</p>
            {% render 'icon-close-custom' %}
          </button>
        </div>
      </div>
    </div>
  </body>
</html>

{% style %}
  .modal-general-sme {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.7);
    z-index: 9999;
    display: flex;
    justify-content: center;
    overflow-y: auto;
    padding: 5rem 0;
  }

  .modal-principal-solicitud-metodo-entrega {
    width: 23.75rem;
    height: max-content;
    padding: 2rem 1.25rem;
    background-color: var(--colorp-secondary);
    border-radius: var(--espaciado-xs);
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .mpsme-icono-base {
    width: 100%;
    display: flex;
    align-items: start;
  }

  .mpsme-icono-base svg {
    width: 3.125rem;
    height: 3.125rem;
    aspect-ratio: 1/1;
  }

  .mpsme-mensaje-base {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: var(--espaciado-xl);
    text-align: center;
  }

  .mpsme-mensaje-base small {
    font-size: 3.3125rem;
    font-style: normal;
    font-weight: 400;
    line-height: 3.4375rem;
    letter-spacing: -0.06625rem;
    text-transform: uppercase;
  }

  .mpsme-seleccion-entrega {
    width: 100%;
    display: flex;
    gap: var(--espaciado-l);
  }

  .mpsme-metodo-entrega {
    flex-basis: 50%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: var(--espaciado-l);
    padding: 1.25rem 0;
    border-radius: var(--espaciado-xs);
    border: 1px solid #969696;
    position: relative;
  }

  .mpsme-icono-metodo {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  /* asd */

  .mpsme-icono-metodo.seleccionado svg {
    filter: invert(100%) sepia(0%) saturate(0%) hue-rotate(93deg) brightness(103%) contrast(103%);
    fill: var(--colorp-secondary);
  }

  .mpsme-metodo-entrega svg {
    width: 2.67631rem;
    height: 2.67631rem;
    aspect-ratio: 42.82/42.82;
  }

  .mpsme-informacion-metodo {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--espaciado-s);
  }

  .mpsme-informacion-metodo-texto {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--espaciado-s);
  }

  .mpsme-metodo-entrega.seleccionado {
    border: none;
    background-color: var(--colorp-primary);
  }

  .mpsme-metodo-entrega.seleccionado p {
    color: var(--colorp-secondary);
  }

  .mpsme-icono-seleccion {
    position: absolute;
    top: 0.45rem;
    right: 0.45rem;
  }

  .mpsme-icono-seleccion svg {
    width: 1.25rem;
    height: 1.25rem;
    aspect-ratio: 1/1;
  }

  .mpsme-opciones-entrega {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: var(--espaciado-xl);
  }

  .mpsme-opcion-continuar {
    width: 100%;
    height: 3rem;
    border-radius: var(--espaciado-xs);
    background-color: var(--colorp-primary);
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
  }

  .mpsme-opcion-continuar p {
    font-weight: 600;
    text-transform: uppercase;
  }

  .mpsme-opcion-omitir {
    width: 100%;
    height: 3rem;
    border-radius: var(--espaciado-xs);
    border: 1px solid var(--colorp-primary);
    background-color: transparent;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--espaciado-xs);
    cursor: pointer;
  }

  .mpsme-opcion-omitir p {
    text-transform: uppercase;
    font-weight: 600;
  }

  @media screen and (min-width: 768px) {
  }

  @media screen and (min-width: 1024px) {
    .modal-principal-solicitud-metodo-entrega {
      width: 50rem;
    }

    .modal-principal-solicitud-metodo-entrega {
      padding: 3rem 5rem;
    }

    .mpsme-icono-base svg {
      width: 6.25rem;
      height: 6.25rem;
    }

    .mpsme-informacion-metodo {
      flex-direction: row;
    }

    .mpsme-metodo-entrega {
      align-items: start;
      padding: 1rem 1.25rem;
    }
  }
{% endstyle %}

<script>
  const modalGeneral = document.querySelector('.modal-general-sme');

  // Inicialmente ocultamos el modal
  modalGeneral.style.display = 'none';

  // Obtener el valor actual de localStorage
  const modalVer = localStorage.getItem('modal-ver');

  if (modalVer === null || modalVer === 'true') {
    modalGeneral.style.display = 'flex';
  }

  const botonContinuar = document.querySelector('.mpsme-opcion-continuar');
  const botonOmitir = document.querySelector('.mpsme-opcion-omitir');

  botonContinuar.addEventListener('click', () => {
    window.location.href = '/pages/test-prueba';
    modalGeneral.style.display = 'none';
  });

  botonOmitir.addEventListener('click', () => {
    modalGeneral.style.display = 'none';
    localStorage.setItem('modal-ver', 'false');
  });
</script>
